
<Problem>

  <Solvers
    gravityVector="0.0, 0.0, -9.81">
    <Reservoir name="reservoirSystem"
               flowSolverName="compositionalMultiphaseFlow"
               wellSolverName="compositionalMultiphaseWell"
               verboseLevel="1"
               targetRegions="{egg,wellRegion1,wellRegion2}"
               initialDt="100">
      <SystemSolverParameters maxIterNewton="40"
                              useDirectSolver="1"
                              verbosityFlag="0"/>
    </Reservoir>
    
    <CompositionalMultiphaseFlow name="compositionalMultiphaseFlow"
                                 verboseLevel="1"
                                 gravityFlag="1"
                                 discretization="fluidTPFA"
                                 targetRegions="{egg}"
                                 fluidName="fluid1"
                                 solidName="rock"
                                 relPermName="relperm"
                                 temperature="297.15"
                                 useMass="0">
    </CompositionalMultiphaseFlow>

    <CompositionalMultiphaseWell name="compositionalMultiphaseWell"
                                 verboseLevel="1"
                                 gravityFlag="1"
                                 targetRegions="{wellRegion1,wellRegion2}"
                                 wellFluidName="fluid1"
                                 wellRelPermName="relperm"
                                 wellTemperature="297.15"
                                 useMass="0">
        <WellControls name="wellControls1"
                      type="producer"
                      control="BHP"
                      targetBHP="5e5"
                      targetRate="1"
                      referenceDepth="0.5"/>
        <WellControls name="wellControls2"
                      type="injector"
                      control="liquidRate" 
                      targetBHP="3e6"
                      targetRate="1e-2" 
               	      injectionStream="{0.0, 0.0, 1}"
                      referenceDepth="0.5"/>
    </CompositionalMultiphaseWell>
  </Solvers>
  
  <Mesh>
    <PAMELAMeshGenerator name="mesh"
                         file="/g/g90/cusini1/geosx/GEOSX/examples/egg.msh"
                         fieldNamesInGEOSX="{permeability}"
                         fieldsToImport="{PERM}"/>

    <InternalWell name="well_producer1"
                  wellRegionName="wellRegion1"
                  wellControlsName="wellControls1"
                  meshName="mesh"
                  polylineNodeCoords="{ {50,  50, 0  }, 
                                        {50,  50, 2} }"
                  polylineSegmentConn="{ {0, 1} }"
                  crossSectionArea="0.3"
                  numElementsPerSegment="1">
        <Perforation name="producer1_perf1"
                     distanceFromHead="0.5"
                     transmissibility="1e-9"/> 
    </InternalWell> 

    <InternalWell name="well_injector1"
                  wellRegionName="wellRegion2"
                  wellControlsName="wellControls2"
                  meshName="mesh"
                  polylineNodeCoords="{ {50, 50, 2  }, 
                                        {50, 50, 7 } }"
                  polylineSegmentConn="{ {0, 1} }"
                  crossSectionArea="0.3"
                  numElementsPerSegment="1">
        <Perforation name="injector1_perf1"
                     distanceFromHead="0.5"
                     transmissibility="1e-9"/> 
    </InternalWell> 
  </Mesh>

  <Events maxTime="5e4" verbosity="1">
    <PeriodicEvent name="outputs"
                   timeFrequency="5e3.0"
                   targetExactTimestep="1"
                   target="/Outputs/siloOutput" />

    <PeriodicEvent name="solverApplications"
                   forceDt="5e3"
                   target="/Solvers/reservoirSystem"/>
  </Events>

  <ElementRegions>
    <CellElementRegion name="egg"
                       cellBlocks="{0_HEX}"
                       materialList="{fluid1, rock, relperm}"/>
    <WellElementRegion name="wellRegion1"
                       materialList="{fluid1, relperm}"/> 
    <WellElementRegion name="wellRegion2"
                       materialList="{fluid1, relperm}"/> 
  </ElementRegions>

  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="fluidTPFA"
                                 fieldName="pressure"
                                 coefficientName="permeability"/>
    </FiniteVolume>
  </NumericalMethods>

 <Constitutive>
    <BlackOilFluid name="fluid1"
                   fluidType="LiveOil"
                   phaseNames="{oil, gas, water}"
                   surfaceDensities="{800.0, 0.9907, 1022.0}"
                   componentMolarWeight="{114e-3, 16e-3, 18e-3}"
                   tableFiles="{pvto.txt, pvtg.txt, pvtw.txt}"/>

    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="0.0"
                                 compressibility="1e-9"/>

    <BrooksCoreyRelativePermeability name="relperm"
                                     phaseNames="{oil, gas, water}"
                                     phaseMinVolumeFraction="{0.05, 0.05, 0.05}"
                                     phaseRelPermExponent="{1.5, 1.5, 1.5}"
                                     phaseRelPermMaxValue="{0.9, 0.9, 0.9}"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification name="porosity"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/egg"
                        fieldName="referencePorosity"
                        scale="0.2"/>

    <FieldSpecification name="initialPressure_egg"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/egg"
                        fieldName="pressure"
                        scale="1e6"/>                     
  </FieldSpecifications>

  <Outputs>
    <Silo name="siloOutput"/>
    <Restart name="restartOutput"/>
  </Outputs>
</Problem>

<Problem>

 <Solvers
    gravityVector="0.0, 0.0, -9.86">
  
    <SinglePhaseFlow name="singlePhaseFlow"
          	     logLevel="1"
                     gravityFlag="1"
                     discretization="singlePhaseTPFA"
                     fluidName="water"
                     solidName="rock"
                     targetRegions="{domain}">
    </SinglePhaseFlow>

  </Solvers>
  
  <Mesh>
    <PAMELAMeshGenerator name="mesh"
                         file="/g/g90/hamon1/geosx/GEOSX/examples/fluidFlow/data/egg.msh"
                         fieldNamesInGEOSX="{permeability}"
                         fieldsToImport="{PERM}"/>
                       
  </Mesh>

  <Events maxTime="2e2" verbosity="1">
    <PeriodicEvent name="outputs"
                   timeFrequency="1e2"
                   targetExactTimestep="1"
                   target="/Outputs/siloOutput" />

    <PeriodicEvent name="solverApplications"
                   target="/Solvers/singlePhaseFlow"/>
                   
    <PeriodicEvent name="restarts"
                   timeFrequency="2.5e4"
                   targetExactTimestep="0"
                   target="/Outputs/restartOutput"/>
  </Events>
  
 <Geometry>
    <Box name="all"  xMin="-1e9, -1e9, -1e9" xMax="  1e9, 1e9, 1e9"/>
    <Box name="inj"  xMin=" 0, 0, -0.01"     xMax="   480,  30,  30"/>
    <Box name="prod" xMin=" 0, 390.0, -0.01" xMax="  480.00,  480.00,  10"/>
  </Geometry>
  
  <ElementRegions>
    <CellElementRegion name="domain"
                       cellBlocks="{0_HEX}"
                       materialList="{water, rock}"/>
  </ElementRegions>

 <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="singlePhaseTPFA"
                                 fieldName="pressure"
                                 boundaryFieldName="facePressure"
                                 targetRegions="{domain}"
                                 coefficientName="permeability"/>
    </FiniteVolume>
 </NumericalMethods>

 <Constitutive>
    <CompressibleSinglePhaseFluid name="water"
                                  defaultDensity="1000"
                                  defaultViscosity="0.001"
                                  referencePressure="1e5"
                                  referenceDensity="1000"
                                  compressibility="5e-16"
                                  referenceViscosity="0.001"
                                  viscosibility="0.0"/>

    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="1e6"
                                 compressibility="1e-15"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification name="porosity_domain"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/domain/0_HEX"
                        fieldName="referencePorosity"
                        scale="0.2"/>

    <FieldSpecification name="initialPressure_domain"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/domain/0_HEX"
                        fieldName="pressure"
                        scale="5e6"/>
                        
    <FieldSpecification name="injTerm"
  		        objectPath="ElementRegions/domain/0_HEX" 
		        fieldName="pressure" 
		        scale="1e7"
		        setNames="{inj}" />
	
    <FieldSpecification name="prodTerm"
  		        objectPath="ElementRegions/domain/0_HEX" 
		        fieldName="pressure" 
	 	        scale="1e6"
		        setNames="{prod}"/>                                             
  </FieldSpecifications>

  <Outputs>
    <Silo name="siloOutput"/>
    <Restart name="restartOutput"/>
  </Outputs>
</Problem>

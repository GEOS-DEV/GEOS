
<Problem>

 <Solvers
    gravityVector="0.0, 0.0, -9.81">

    <Reservoir name="reservoirSystem"
               flowSolverName="singlePhaseFlow"
               wellSolverName="singlePhaseWell"
               verboseLevel="1"
               targetRegions="{egg,wellRegion1,wellRegion2,wellRegion3}">
      <SystemSolverParameters maxIterNewton="40"
                              useDirectSolver="1"
                              verbosityFlag="0"
                              maxSubSteps="10"
                              maxTimeStepCuts="10"
                              newtonTol="1e-6"/>
    </Reservoir>
  
    <SinglePhaseFlow name="singlePhaseFlow"
                     verboseLevel="1"
                     gravityFlag="1"
                     discretization="singlePhaseTPFA"
                     fluidName="water"
                     solidName="rock"
                     targetRegions="{egg}">
    </SinglePhaseFlow>

    <SinglePhaseWell name="singlePhaseWell"
                     verboseLevel="1"
                     gravityFlag="1"
                     wellFluidName="water"
                     targetRegions="{wellRegion1,wellRegion2,wellRegion3}">
        <WellControls name="wellControls1"
                      type="producer"
                      control="BHP"
                      targetBHP="1e6"
                      targetRate="1e99"/>
        <WellControls name="wellControls2"
                      type="producer"
                      control="BHP"
                      targetBHP="1e6"
                      targetRate="1e99"/>
        <WellControls name="wellControls3"
                      type="injector"
                      control="liquidRate" 
                      targetBHP="1e7"
                      targetRate="10"/>     
    </SinglePhaseWell>
  </Solvers>
  
  <Mesh>
    <PAMELAMeshGenerator name="mesh"
                         file="../data/egg.msh"
                         fieldNamesInGEOSX="{permeability}"
                         fieldsToImport="{PERM}"/>
                         
    <InternalWell name="well_producer1"
                  wellRegionName="wellRegion1"
                  wellControlsName="wellControls1"
                  meshName="mesh"
                  polylineNodeCoords="{ {120,  40, 0}, 
                                        {120,  40, 2} }"
                  polylineSegmentConn="{ {0, 1} }"
                  radius="0.1"
                  numElementsPerSegment="2">
     <Perforation name="producer1_perf1"
                  distanceFromHead="1.99"
                  wellPeacemanIndex="1e-10"/> 
    </InternalWell> 
    <InternalWell name="well_producer2"
                  wellRegionName="wellRegion2"
                  wellControlsName="wellControls2"
                  meshName="mesh"
                  polylineNodeCoords="{ {20, 120, 0}, 
                                        {20, 120, 2 } }"
                  polylineSegmentConn="{ {0, 1} }"
                  radius="0.1"
                  numElementsPerSegment="2">
     <Perforation name="producer2_perf1"
                  distanceFromHead="1.99"
                  wellPeacemanIndex="1e-10"/>
    </InternalWell> 
    <InternalWell name="well_injector1"
                  wellRegionName="wellRegion3"
                  wellControlsName="wellControls3"
                  meshName="mesh"
                  polylineNodeCoords="{ {60, 60, 0}, 
                                        {60, 60, 2 } }"
                  polylineSegmentConn="{ {0, 1} }"
                  radius="0.1"
                  numElementsPerSegment="4">
     <Perforation name="injector1_perf1"
                  distanceFromHead="1.5"
                  wellPeacemanIndex="1e-10"/> 
    </InternalWell>
  
  </Mesh>

  <Events maxTime="2e2" verbosity="1">
    <PeriodicEvent name="outputs"
                   timeFrequency="1e2"
                   targetExactTimestep="1"
                   target="/Outputs/siloOutput" />

    <PeriodicEvent name="solverApplications"
                   target="/Solvers/reservoirSystem"/>
                   
    <PeriodicEvent name="restarts"
                   timeFrequency="2.5e4"
                   targetExactTimestep="0"
                   target="/Outputs/restartOutput"/>
  </Events>
  
 <Geometry>
    <Box name="all"  xMin="-1e9, -1e9, -1e9" xMax="  1e9, 1e9, 1e9"/>
 </Geometry>
  
  <ElementRegions>
    <CellElementRegion name="egg"
                       cellBlocks="{0_HEX}"
                       materialList="{water, rock}"/>
    <WellElementRegion name="wellRegion1"
                       materialList="{water}"/> 
    <WellElementRegion name="wellRegion2"
                       materialList="{water}"/>
    <WellElementRegion name="wellRegion3"
                       materialList="{water}"/>   
  </ElementRegions>

 <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="singlePhaseTPFA"
                                 fieldName="pressure"
                                 boundaryFieldName="facePressure"
                                 targetRegions="{egg}"
                                 coefficientName="permeability"/>
    </FiniteVolume>
 </NumericalMethods>

 <Constitutive>
    <CompressibleSinglePhaseFluid name="water"
                                  defaultDensity="1000"
                                  defaultViscosity="0.001"
                                  referencePressure="1e5"
                                  referenceDensity="1000"
                                  compressibility="0"
                                  referenceViscosity="0.001"
                                  viscosibility="0.0"/>

    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="0"
                                 compressibility="1e-15"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification name="porosity_egg"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/egg/0_HEX"
                        fieldName="referencePorosity"
                        scale="0.2"/>

    <FieldSpecification name="initialPressure_egg"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/egg/0_HEX"
                        fieldName="pressure"
                        scale="5e6"/>                                         
  </FieldSpecifications>

  <Outputs>
    <Silo name="siloOutput"/>
    <Restart name="restartOutput"/>
  </Outputs>
</Problem>

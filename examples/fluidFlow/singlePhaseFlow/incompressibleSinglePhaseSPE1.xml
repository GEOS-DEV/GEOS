<!--# {{short}} # -->
<!--# {{long}} # -->
<Problem>
  <Solvers gravityVector="0.0, 0.0, -9.81">

    <SinglePhaseFlow name="singlePhaseFlow"
                     verboseLevel="1"
                     gravityFlag="1"
                     discretization="singlePhaseTPFA"
                     fluidName="water"
                     solidName="rock"
                     targetRegions="{FullDomain}">
    </SinglePhaseFlow>

  </Solvers>
  <Mesh>
    <PAMELAMeshGenerator name="FullDomain"
                         file="/g/g90/hamon1/geosx/GEOSX/examples/fluidFlow//data/SPE1.GRDECL"
			 scale="0.3048"/>

  </Mesh>
  <Geometry>
    <Box name="all" xMin="-1e9, -1e9, -1e9" xMax="1e9, 1e9, 1e9" />
    <Box name="inj"  xMin=" -1, -1, -1e9"     xMax="  375,  375,  1e9"/>
<!--   <Box name="prod" xMin="2000, 2000, 2400" xMax="3000, 3000, 3000"/> -->
  </Geometry>
  <ElementRegions>
    <CellElementRegion name="FullDomain"
                       cellBlocks="{0_HEX}"
                       materialList="{water, rock}" />
  </ElementRegions>
  <Events maxTime="1000.0">
    <PeriodicEvent name="solverApplications"
                   forceDt="50.0"
                   target="/Solvers/singlePhaseFlow" />
    <PeriodicEvent name="outputs"
                   timeFrequency="50.0"
                   targetExactTimestep="1"
                   target="/Outputs/siloOutput" />
  </Events>
  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="singlePhaseTPFA"
                                 fieldName="pressure"
                                 boundaryFieldName="facePressure"
                                 targetRegions="{FullDomain}"
                                 coefficientName="permeability" />
    </FiniteVolume>
  </NumericalMethods>
  <Constitutive>
    <CompressibleSinglePhaseFluid name="water"
                                  defaultDensity="1000"
                                  defaultViscosity="0.001"
                                  referencePressure="0.0"
                                  referenceDensity="1000"
                                  compressibility="1e-15"
                                  referenceViscosity="0.005"
                                  viscosibility="0.0" />

    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="0.0"
                                 compressibility="1e-9" />

  </Constitutive>
  <FieldSpecifications>
    <FieldSpecification name="permx"
                        component="0"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/FullDomain"
                        fieldName="permeability"
                        scale="100.0e-15" />
    <FieldSpecification name="permy"
                        component="1"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/FullDomain"
                        fieldName="permeability"
                        scale="60.0e-15" />
    <FieldSpecification name="permz"
                        component="2"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/FullDomain"
                        fieldName="permeability"
                        scale="25.0e-15" />
    <FieldSpecification name="referencePorosity"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/FullDomain"
                        fieldName="referencePorosity"
                        scale="0.05" />
    <FieldSpecification name="initialPressure"
                        initialCondition="1"
                        setNames="{all}"
                        objectPath="ElementRegions/FullDomain"
                        fieldName="pressure"
                        scale="1e6" />
    
    <FieldSpecification name="injTerm"
  		        objectPath="ElementRegions/FullDomain" 
		        fieldName="pressure" 
		        scale="1e7"
		        setNames="{inj}" />
<!--    
    <FieldSpecification name="prodTerm"
  		        objectPath="ElementRegions/FullDomain" 
		        fieldName="pressure" 
	 	        scale="1e6"
		        setNames="{prod}"/>                           
-->
  </FieldSpecifications>
  <Functions>
  </Functions>
  <Outputs>
    <Silo name="siloOutput" />
  </Outputs>
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./Buckley_Leverett_base.xml"/>
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 0.1 }"
      yCoords="{ 0, 0.00202683 }"
      zCoords="{ 0, 1 }"
      nx="{ 1000 }"
      ny="{ 1 }"
      nz="{ 1 }"
      cellBlockNames="{ cellBlock }"/>
  </Mesh>

  <Geometry>
    <Box
      name="source"
      xMin="{-0.00001, -0.00001, -0.00001}"
      xMax="{ 0.00011, 1.00001, 1.00001}"/>

    <Box
      name="sink"
      xMin="{ 0.09999, -0.00001, -0.00001}"
      xMax="{ 0.10001, 1.00001, 1.00001}"/>
  </Geometry>

  <Events
    maxTime="1.0">
    
    <PeriodicEvent
      name="restarts"
      timeFrequency="0.4"
      targetExactTimestep="0"
      target="/Outputs/restartOutput"
    />

    <PeriodicEvent
      name="solverApplications"
      maxEventDt="0.1"
      target="/Solvers/compflow"/>    
  </Events>
</Problem>

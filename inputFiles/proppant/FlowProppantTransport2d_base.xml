<?xml version="1.0" ?>

<!--# # -->
<Problem>
  <Solvers
    gravityVector="{ 0.0, 0.0, -9.81 }">
    <!-- SPHINX_PROPPANT_TRANSPORT_SOLVER_BEGIN -->
    <ProppantTransport
      name="ProppantTransport"
      logLevel="1"
      discretization="singlePhaseTPFA"
      targetRegions="{ Fracture }">
      <NonlinearSolverParameters
        newtonTol="1.0e-8"
        newtonMaxIter="8"
        lineSearchAction="None"/>
      <LinearSolverParameters
        directParallel="0"/>
    </ProppantTransport>

    <!-- SPHINX_PROPPANT_TRANSPORT_SOLVER_END -->
    <!-- SPHINX_PROPPANT_COUPLED_SOLVER_BEGIN -->
    <FlowProppantTransport
      name="FlowProppantTransport"
      proppantSolverName="ProppantTransport"
      flowSolverName="SinglePhaseFVM"
      targetRegions="{ Fracture }"
      logLevel="1">
      <NonlinearSolverParameters
        newtonMaxIter="8"
	lineSearchAction="None"  	  
        couplingType="Sequential"/>
    </FlowProppantTransport>
        

    <!-- SPHINX_PROPPANT_COUPLED_SOLVER_END -->
    <!-- SPHINX_PROPPANT_FLOW_SOLVER_BEGIN -->
    <SinglePhaseProppantFVM
      name="SinglePhaseFVM"
      logLevel="1"
      discretization="singlePhaseTPFA"
      targetRegions="{ Fracture }">
      <NonlinearSolverParameters
        newtonTol="1.0e-8"
        newtonMaxIter="8"
        lineSearchAction="None"/>
      <LinearSolverParameters
        solverType="gmres"
        krylovTol="1.0e-12"/>
    </SinglePhaseProppantFVM>

    <!-- SPHINX_PROPPANT_FLOW_SOLVER_END -->
    <SurfaceGenerator
      name="SurfaceGen"
      targetRegions="{ Fracture }"
      rockToughness="1e6"
      mpiCommOrder="1"/>
  </Solvers>

  <Geometry>
    <Box
      name="left"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 0.01, 1.01, 25.01 }"/>

    <Box
      name="right"
      xMin="{ -0.01, 23.99, -0.01 }"
      xMax="{ 0.01, 25.01, 25.01 }"/>

    <Box
      name="top"
      xMin="{ -0.01, -0.01, 23.99 }"
      xMax="{ 0.01, 25.01, 25.01 }"/>

    <Box
      name="bot"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 0.01, 25.01, 1.01 }"/>

    <Box
      name="source"
      xMin="{ -0.01, 11.99, 11.99 }"
      xMax="{ 0.01, 13.01, 13.01 }"/>

    <Box
      name="fracture"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 0.01, 25.01, 25.01 }"/>
  </Geometry>

  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation
        name="singlePhaseTPFA"/>
    </FiniteVolume>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion
      name="region"
      cellBlocks="{ * }"
      materialList="{ water, sand }"/>

    <SurfaceElementRegion
      name="Fracture"
      defaultAperture="1.0e-3"
      materialList="{ water, fractureFilling, sand }"/>
  </ElementRegions>

  <Constitutive>
    <ProppantSlurryFluid
      name="water"
      referencePressure="1e5"
      compressibility="5e-10"
      referenceProppantDensity="1200.0"/>

    <ParticleFluid
      name="sand"
      particleSettlingModel="Stokes"
      proppantDensity="1200.0"/>

    <ProppantSolidProppantPermeability
      name="fractureFilling"
      solidModelName="nullSolid"
      porosityModelName="fracturePorosity"
      permeabilityModelName="fracturePerm"/>

    <NullModel
      name="nullSolid"/>

    <ProppantPorosity
      name="fracturePorosity"
      defaultReferencePorosity="1.00"
      maxProppantConcentration="0.6"/>

    <ProppantPermeability
      name="fracturePerm"
      proppantDiameter="4.0e-4"
      maxProppantConcentration="0.6"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification
      name="frac"
      initialCondition="1"
      setNames="{ fracture }"
      objectPath="faceManager"
      fieldName="ruptureState"
      scale="1"/>

    <FieldSpecification
      name="fracAp"
      initialCondition="1"
      objectPath="ElementRegions/Fracture"
      fieldName="elementAperture"
      scale="1e-3"
      setNames="{ fracture }"/>

    <FieldSpecification
      name="frac1"
      initialCondition="1"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="1e5"
      component="0"
      setNames="{ fracture }"/>

    <FieldSpecification
      name="frac2"
      initialCondition="1"
      objectPath="ElementRegions/Fracture"
      fieldName="proppantConcentration"
      scale="0.0"
      component="0"
      setNames="{ fracture }"/>

    <FieldSpecification
      name="source1"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="4e5"
      component="0"
      setNames="{ source }"/>

    <FieldSpecification
      name="source2"
      objectPath="ElementRegions/Fracture"
      fieldName="proppantConcentration"
      scale="0.02"
      component="0"
      setNames="{ source }"/>

    <FieldSpecification
      name="left1"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="1e5"
      component="0"
      setNames="{ left }"/>

    <FieldSpecification
      name="left2"
      objectPath="ElementRegions/Fracture"
      fieldName="proppantConcentration"
      scale="0.0"
      component="0"
      setNames="{ left }"/>

    <FieldSpecification
      name="right1"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="1e5"
      component="0"
      setNames="{ right }"/>

    <FieldSpecification
      name="right2"
      objectPath="ElementRegions/Fracture"
      fieldName="proppantConcentration"
      scale="0.0"
      component="0"
      setNames="{ right }"/>

    <FieldSpecification
      name="top1"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="1e5"
      component="0"
      setNames="{ top }"/>

    <FieldSpecification
      name="top2"
      objectPath="ElementRegions/Fracture"
      fieldName="proppantConcentration"
      scale="0.0"
      component="0"
      setNames="{ top }"/>

    <FieldSpecification
      name="bot1"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="1e5"
      component="0"
      setNames="{ bot }"/>

    <FieldSpecification
      name="bot2"
      objectPath="ElementRegions/Fracture"
      fieldName="proppantConcentration"
      scale="0.0"
      component="0"
      setNames="{ bot }"/>
  </FieldSpecifications>

  <Outputs>
    <Silo
      name="siloOutput"/>

    <Restart
      name="sidreRestart"/>
  </Outputs>
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
  <File name="./fractureMatrixThermalFlow_conforming_base.xml" />
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 1 }"
      yCoords="{ 0, 1 }"
      zCoords="{ 0, 1 }"
      nx="{ 10 }"
      ny="{ 10 }"
      nz="{ 10 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Geometry>
    <Box
      name="fracture"
      xMin="{ 0.45, 0.24, -0.01 }"
      xMax="{ 0.51, 0.76, 1.01 }"/>

    <Box
      name="source"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 1.1, 0.1, 1.01 }"/>

    <Box
      name="sink"
      xMin="{ -0.01, 0.9, -0.01 }"
      xMax="{ 1.01, 1.01, 1.01 }"/> 
  </Geometry>

  <Events
    maxTime="2e5">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGen"/>

    <PeriodicEvent
      name="preFracOutputs"
      target="/Outputs/vtkOutput"/>  

    <PeriodicEvent
      name="solverApplications"
      forceDt="1e4"
      target="/Solvers/SinglePhaseFlow"/>

    <PeriodicEvent
      name="outputs"
      target="/Outputs/vtkOutput"/>
  </Events>
</Problem>

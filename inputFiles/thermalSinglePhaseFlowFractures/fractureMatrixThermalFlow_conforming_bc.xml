<?xml version="1.0" ?>

<Problem>
  <FieldSpecifications>
    <FieldSpecification
      name="frac"
      initialCondition="1"
      setNames="{ fracture }"
      objectPath="faceManager"
      fieldName="ruptureState"
      scale="1"/>

    <FieldSpecification
      name="separableFace"
      initialCondition="1"
      setNames="{ fracture }" 
      objectPath="faceManager"
      fieldName="isFaceSeparable"
      scale="1"/>

    <FieldSpecification
      name="Porosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix/cb1"
      fieldName="rockPorosity_referencePorosity"
      scale="0.1"/>

    <FieldSpecification
      name="fracPorosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Fracture"
      fieldName="fracturePorosity_porosity"
      scale="1.00"/>

    <FieldSpecification
      name="initialPressure"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix"
      fieldName="pressure"
      scale="0.0"/>

    <FieldSpecification
      name="initialTemperature"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix"
      fieldName="temperature"
      scale="0.0"/>  

    <FieldSpecification
      name="sourceTermPressure"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="1.0e5"
      setNames="{ all }"/>

    <FieldSpecification
      name="sourceTermTemperature"
      objectPath="ElementRegions/Fracture"
      fieldName="temperature"
      scale="300"
      setNames="{ all }"/>  

    <FieldSpecification
    name="facePressure"
    objectPath="faceManager"
    fieldName="pressure"
    scale="0.0"
    setNames="{ xpos, xneg }"/>

    <FieldSpecification
    name="faceTemperature"
    objectPath="faceManager"
    fieldName="temperature"
    scale="0.0"
    setNames="{ xpos, xneg }"/> 
  </FieldSpecifications>
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included name="primary_includes">
    <File
      name="./fractureMatrixThermalFlow_edfm_base.xml"/>

    <File
      name="./fractureMatrixThermalFlow_bc.xml"/>
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 20 }"
      yCoords="{ 0, 20 }"
      zCoords="{ 0, 1 }"
      nx="{ 11 }"
      ny="{ 10 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Geometry>
    <Box
      name="source"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 1.1, 0.21, 1.01 }"/>

    <Box
      name="sink"
      xMin="{ -0.01, 0.79, -0.01 }"
      xMax="{ 1.01, 1.01, 1.01 }"/>

    <Rectangle
      name="FracturePlane"
      normal="{ 1, 0, 0 }"
      origin="{ 10.0, 10.0, 0.5 }"
      lengthVector="{ 0, 1, 0 }"
      widthVector="{ 0, 0, 1 }"
      dimensions="{ 25, 4 }"/>
  </Geometry>

  <Events
    maxTime="1e6"
    logLevel="3">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGenerator"/>

    <PeriodicEvent
      name="solverApplications"
      forceDt="1e5"
      target="/Solvers/SinglePhaseFlow"/>

    <PeriodicEvent
      name="outputs"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="1e6"
      target="/Outputs/sidreRestart"/>
  </Events>
</Problem>

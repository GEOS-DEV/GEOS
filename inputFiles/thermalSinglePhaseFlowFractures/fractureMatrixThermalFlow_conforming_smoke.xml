<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./fractureMatrixThermalFlow_conforming_base.xml" />
    <File name="./fractureMatrixThermalFlow_conforming_bc.xml"/>
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 20 }"
      yCoords="{ 0, 20 }"
      zCoords="{ 0, 1 }"
      nx="{ 10 }"
      ny="{ 11 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Geometry>
    <Box
      name="fracture"
      xMin="{ 9.98, -0.01, -0.01 }"
      xMax="{ 10.02, 20.01, 1.01 }"/>
  </Geometry>

  <Events
    maxTime="1e6">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGen"/>

    <PeriodicEvent
      name="preFracOutputs"
      target="/Outputs/vtkOutput"/>  

    <PeriodicEvent
      name="solverApplications"
      forceDt="1e5"
      target="/Solvers/SinglePhaseFlow"/>

    <PeriodicEvent
      name="outputs"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="1e6"
      target="/Outputs/restartOutput"/>
  </Events>
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
    <File
      name="fractureMatrixThermalFlow_base.xml"/>
  </Included>

  <Solvers
    gravityVector="{ 0.0, 0.0, -9.81 }">
    <SinglePhaseFVM
      name="SinglePhaseFlow"
      logLevel="1"
      discretization="singlePhaseTPFA"
      isThermal="1"
      targetRegions="{ RockMatrix, Fracture }">
      <NonlinearSolverParameters
        newtonTol="1.0e-2"
        newtonMaxIter="8"
        allowNonConverged="1"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SinglePhaseFVM>

    <SurfaceGenerator
      name="SurfaceGen"
      targetRegions="{ Fracture }"
      rockToughness="1e6"
      mpiCommOrder="1"/>
  </Solvers>

  <ElementRegions>
    <CellElementRegion
      name="RockMatrix"
      cellBlocks="{ cb1 }"
      materialList="{ water, rock, thermalCond }"/>

    <SurfaceElementRegion
      name="Fracture"
      defaultAperture="5.0e-3"
      materialList="{ water, fractureFilling, thermalCond }"/>
  </ElementRegions>

  <Outputs>
    <VTK
      name="vtkOutput"
      plotFileRoot="fractureMatrixThermalFlow_conforming"/>

    <Restart
      name="restartOutput"/>
  </Outputs>
</Problem>

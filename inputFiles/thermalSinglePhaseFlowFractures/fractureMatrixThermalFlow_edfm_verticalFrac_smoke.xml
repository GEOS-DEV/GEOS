<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./fractureMatrixThermalFlow_edfm_base.xml" />
    <File name="./fractureMatrixThermalFlow_edfm_bc_1.xml" />
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 1 }"
      yCoords="{ 0, 1 }"
      zCoords="{ 0, 1 }"
      nx="{ 5 }"
      ny="{ 5 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Geometry>
    <Box
      name="source"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 1.1, 0.21, 1.01 }"/>

    <Box
      name="sink"
      xMin="{ -0.01, 0.79, -0.01 }"
      xMax="{ 1.01, 1.01, 1.01 }"/>

    <BoundedPlane
      name="FracturePlane"
      normal="{ 1, 0, 0 }"
      origin="{ 0.5, 0.5, 0.5 }"
      lengthVector="{ 0, 1, 0 }"
      widthVector="{ 0, 0, 1 }"
      dimensions="{ 0.8, 1 }"/>
  </Geometry>

  <Events
    maxTime="2e5"
    logLevel="3">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGenerator"/>

    <PeriodicEvent
      name="solverApplications"
      forceDt="1e4"
      target="/Solvers/SinglePhaseFlow"/>

    <PeriodicEvent
      name="outputs"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="5e4"
      target="/Outputs/sidreRestart"/>
  </Events>

  <Outputs>
    <VTK
      name="vtkOutput"
      plotFileRoot="fracMatThermalFlow_edfm_vertical"
      plotLevel="2"
      format="binary"/>

    <Restart
      name="sidreRestart"/>
  </Outputs>
</Problem>

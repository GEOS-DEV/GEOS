<?xml version="1.0" ?>

<Problem>
 
  <FieldSpecifications>

    <FieldSpecification
      name="Porosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix/cb1"
      fieldName="rockPorosity_referencePorosity"
      scale="0.1"/>

    <FieldSpecification
      name="fracPorosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Fracture"
      fieldName="fracturePorosity_porosity"
      scale="1.00"/>

    <FieldSpecification
      name="initialPressure"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix"
      fieldName="pressure"
      scale="0.0"/>

    <FieldSpecification
      name="initialTemperature"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix"
      fieldName="temperature"
      scale="0.0"/>  

    <FieldSpecification
      name="sourceTermPressure"
      objectPath="ElementRegions/Fracture"
      fieldName="pressure"
      scale="1.0e5"
      setNames="{ all }"/>

    <FieldSpecification
      name="sourceTermTemperature"
      objectPath="ElementRegions/Fracture"
      fieldName="temperature"
      scale="300"
      setNames="{ all }"/>  

    <FieldSpecification
    name="leftPressure"
    objectPath="faceManager"
    fieldName="pressure"
    scale="0.0"
    setNames="{ xneg }"/>

    <FieldSpecification
    name="rightPressure"
    objectPath="faceManager"
    fieldName="pressure"
    scale="0.0"
    setNames="{ xpos }"/>

    <FieldSpecification
    name="leftTemperature"
    objectPath="faceManager"
    fieldName="temperature"
    scale="0.0"
    setNames="{ xneg }"/>

    <FieldSpecification
    name="rightTemperature"
    objectPath="faceManager"
    fieldName="temperature"
    scale="0.0"
    setNames="{ xpos }"/>   
  </FieldSpecifications>
</Problem>

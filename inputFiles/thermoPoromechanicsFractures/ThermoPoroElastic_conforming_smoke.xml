<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./ThermoPoroElastic_conforming_base.xml" />
  </Included>
  
  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 20 }"
      yCoords="{ 0, 20 }"
      zCoords="{ 0, 1 }"
      nx="{ 2 }"
      ny="{ 3 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Geometry>
   <Box
      name="fracture"
      xMin="{  9.5,-0.01, -0.01 }"
      xMax="{  10.5, 20.01,  1.01 }"/>
  </Geometry>

  <Events
    maxTime="100">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGenerator"/>

    <SoloEvent
    name="preFracPlot"
    target="/Outputs/vtkOutput"/>  

    <PeriodicEvent
      name="pressureHistoryCollection"
      endTime="1000.0"
      forceDt="100.0"
      target="/Tasks/pressureCollection"/>

    <PeriodicEvent
      name="pressureTimeHistoryOutput"
      endTime="1000.0"
      forceDt="100.0"
      target="/Outputs/pressureHistoryOutput"/>

   <PeriodicEvent
      name="temperatureHistoryCollection"
      endTime="1000.0"
      forceDt="100.0"
      target="/Tasks/temperatureCollection"/>

    <PeriodicEvent
      name="temperatureTimeHistoryOutput"
      endTime="1000.0"
      forceDt="100.0"
      target="/Outputs/temperatureHistoryOutput"/>  

    <PeriodicEvent
      name="outputs"
      timeFrequency="10.0"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="solverApplication0"
      endTime="100.0"
      forceDt="10.0"
      target="/Solvers/poroSolver"/>
 
    <PeriodicEvent
      name="restarts"
      timeFrequency="100"
      target="/Outputs/restartOutput"/>
</Events>

</Problem>
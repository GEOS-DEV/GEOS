<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./ThermoPoroElastic_efem-edfm_verticalFrac_base.xml" />
  </Included>
  
  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 10 }"
      yCoords="{ 0, 20 }"
      zCoords="{ 0, 1 }"
      nx="{ 5 }"
      ny="{ 10 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Geometry>
    <BoundedPlane
      name="FracturePlane"
      normal="{ 1, 0, 0 }"
      origin="{ 5.0, 10.0, 0.5 }"
      lengthVector="{ 0, 1, 0 }"
      widthVector="{ 0, 0, 1 }"
      dimensions="{ 12, 4 }"/>
  </Geometry>

  
  <Events
    maxTime="100">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGenerator"/>

    <PeriodicEvent
      name="outputs"
      timeFrequency="10.0"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="solverApplication0"
      endTime="100.0"
      forceDt="10.0"
      target="/Solvers/poroSolver"/>
 
    <PeriodicEvent
      name="restarts"
      timeFrequency="100"
      target="/Outputs/restartOutput"/>
</Events>

</Problem>
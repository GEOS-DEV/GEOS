<?xml version="1.0" ?>

<Problem>
  <!-- SPHINX_TUT_EXT_TETRA_SOLVERS -->
  <Solvers
    gravityVector="{ 0.0, 0.0, -9.81 }">
    <SinglePhaseFVM
      name="SinglePhaseFlow"
      discretization="singlePhaseTPFA"
      targetRegions="{ Domain }">
      <NonlinearSolverParameters
        newtonTol="1.0e-6"
        newtonMaxIter="8"/>
      <LinearSolverParameters
        solverType="gmres"
        krylovTol="1.0e-10"/>
    </SinglePhaseFVM>
  </Solvers>

  <!-- SPHINX_TUT_EXT_TETRA_SOLVERS_END -->

  <Geometry>
    <Box
      name="left"
      xMin="{ -1, -1, -1 }"
      xMax="{ 0.9, 11, 11 }"/>
  </Geometry>


  <!-- SPHINX_TUT_EXT_TETRA_NUM_METHODS -->
  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation
        name="singlePhaseTPFA"
        />
    </FiniteVolume>
  </NumericalMethods>

  <!-- SPHINX_TUT_EXT_TETRA_NUM_METHODS_END -->
  <!-- SPHINX_TUT_EXT_TETRA_ELEM_REGIONS -->
  <ElementRegions>
    <CellElementRegion
      name="Domain"
      cellBlocksMatch="{ * }"
      materialList="{ water, rock }"/>
  </ElementRegions>

  <!-- SPHINX_TUT_EXT_TETRA_ELEM_REGIONS_END -->
  <!-- SPHINX_TUT_EXT_TETRA_CONSTITUTIVE -->
  <Constitutive>
    <CompressibleSinglePhaseFluid
      name="water"
      defaultDensity="1000"
      defaultViscosity="0.001"
      referencePressure="1e6"
      compressibility="1e-9"
      viscosibility="0.0"/>

    <CompressibleSolidConstantPermeability
      name="rock"
      solidModelName="nullSolid"
      porosityModelName="rockPorosity"
      permeabilityModelName="rockPerm"/>

    <NullModel
      name="nullSolid"/>

    <PressurePorosity
      name="rockPorosity"
      defaultReferencePorosity="0.05"
      referencePressure="1.0e6"
      compressibility="1.0e-9"/>

    <ConstantPermeability
      name="rockPerm"
      permeabilityComponents="{ 2.0e-14, 2.0e-14, 2.0e-14 }"/>
  </Constitutive>

  <!-- SPHINX_TUT_EXT_TETRA_CONSTITUTIVE_END -->
  <!-- SPHINX_TUT_EXT_TETRA_FIELDS -->
  <FieldSpecifications>
    <FieldSpecification
      name="Porosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions"
      fieldName="rockPorosity_referencePorosity"
      scale="0.05"/>

    <FieldSpecification
      name="initialPressure"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions"
      fieldName="pressure"
      scale="1e6"/>

    <FieldSpecification
      name="boundaryPressure"
      objectPath="faceManager"
      fieldName="pressure"
      scale="1.1e6"
      setNames="{ left }"/>
  </FieldSpecifications>

  <!-- SPHINX_TUT_EXT_TETRA_FIELDS_END -->
  <Outputs>
    <Silo
      name="siloOutput"/>
    <Restart
      name="restartOutput"/>
  </Outputs>
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./thermalCompressible_2d_base.xml" />
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 300 }"
      yCoords="{ 0, 1 }"
      zCoords="{ 0, 150 }"
      nx="{ 100 }"
      ny="{ 1 }"
      nz="{ 50 }"
      cellBlockNames="{ cb }"/>
  </Mesh>

  <Geometry>
    <Box
      name="sink"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 150.01, 1.01, 3.01 }"/>

    <Box
      name="source"
      xMin="{ -0.01, -0.01, 146.99 }"
      xMax="{ 300.01, 1.01, 150.01 }"/>
  </Geometry>

  <Events
    maxTime="6e7">
    <PeriodicEvent
      name="outputs"
      timeFrequency="6e5"
      target="/Outputs/nonuniformHeating"/>

    <PeriodicEvent
      name="solverApplications"
      maxEventDt="6e5"
      target="/Solvers/singleFlow"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="3e7"
      target="/Outputs/restartOutput"/>
  </Events>

</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./ThermoPoroElastic_sequential_1d_consolidation_base.xml" />
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 1 }"
      yCoords="{ 0, 7 }"
      zCoords="{ 0, 1 }"
      nx="{ 1 }"
      ny="{ 20 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Events
    maxTime="1000">
    <PeriodicEvent
      name="outputs"
      timeFrequency="100.0"
      target="/Outputs/thermoPoroVTKOutput"/>

    <PeriodicEvent
      name="solverApplication0"
      endTime="1e-2"
      forceDt="1e-2"
      target="/Solvers/thermoPoroSolver"/>

    <PeriodicEvent
      name="solverApplication1"
      beginTime="1e-2"
      endTime="1"
      forceDt="0.99"
      target="/Solvers/thermoPoroSolver"/>

    <PeriodicEvent
      name="solverApplication2"
      beginTime="1"
      endTime="10"
      forceDt="9"
      target="/Solvers/thermoPoroSolver"/>

    <PeriodicEvent
      name="solverApplication3"
      beginTime="10"
      endTime="1000"
      forceDt="10"
      target="/Solvers/thermoPoroSolver"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="500.0"
      target="/Outputs/restartOutput"/>

  </Events>

  <Geometry>
    <Box
      name="top"
      xMin="{ -0.001, 6.649, -0.001 }"
      xMax="{ 1.001, 7.001, 1.001 }"/>
  </Geometry>
</Problem>

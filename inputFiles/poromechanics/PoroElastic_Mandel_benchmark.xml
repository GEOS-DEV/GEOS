<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./PoroElastic_Mandel_base.xml"/>
  </Included>  

  <!-- SPHINX_MESH -->
  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0.0, 1.0 }"
      yCoords="{ 0.0, 0.1 }"
      zCoords="{ 0.0, 1.0 }"
      nx="{ 20 }"
      ny="{ 1 }"
      nz="{ 20 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>
  <!-- SPHINX_MESH_END -->

  <Events
    maxTime="10.0">
  
    <PeriodicEvent
      name="outputs"
      timeFrequency="5.0e-03"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="solverApplication0"
      endTime="1.e-10"
      forceDt="1.e-10"
      target="/Solvers/poroSolve"/>

    <PeriodicEvent
      name="solverApplication1"
      beginTime="1.e-10"
      endTime="5.0000000e-03"
      forceDt="4.9999999e-03"
      target="/Solvers/poroSolve"/>

    <PeriodicEvent
      name="solverApplication2"
      beginTime="5.0e-03"
      endTime="0.05"
      forceDt="5.0e-03"
      target="/Solvers/poroSolve"/>
   
    <PeriodicEvent
      name="solverApplication3"
      beginTime="0.05"
      endTime="10.0"
      forceDt="0.01"
      target="/Solvers/poroSolve"/>

    <PeriodicEvent
      name="pressureCollection" 
      target="/Tasks/pressureCollection"/>

    <PeriodicEvent
      name="pressureOutput"
      targetExactTimestep="0"
      target="/Outputs/pressureHistoryOutput"/>

    <PeriodicEvent
      name="displacementCollection" 
      target="/Tasks/displacementCollection" />

    <PeriodicEvent
      name="displacementOutput"
      targetExactTimestep="0" 
      target="/Outputs/displacementHistoryOutput" />   
  </Events>
 
</Problem>

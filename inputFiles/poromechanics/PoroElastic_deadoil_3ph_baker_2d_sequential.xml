<?xml version="1.0" ?>

<Problem>

  <Included name="primary_includes">
    <File name="./PoroElastic_deadoil_3ph_baker_2d_base.xml" />
  </Included>

  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <MultiphasePoromechanics
      name="MultiphasePoroelasticitySolver"
      solidSolverName="LinearElasticitySolver"
      flowSolverName="TwoPhaseFlowSolver"
      logLevel="1"
      targetRegions="{ Domain }">
      <NonlinearSolverParameters
        newtonTol="1.0e-9"
	couplingType="Sequential"
        newtonMaxIter="15"
	subcycling="1"
        lineSearchAction="None"
        lineSearchMaxCuts="2"/>
    </MultiphasePoromechanics>

    <SolidMechanicsLagrangianSSLE
      name="LinearElasticitySolver"
      timeIntegrationOption="QuasiStatic"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Domain }">
      <NonlinearSolverParameters
        newtonTol="1.0e-9"
        lineSearchAction="None"
        newtonMaxIter="40"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SolidMechanicsLagrangianSSLE>

    <CompositionalMultiphaseFVM
      name="TwoPhaseFlowSolver"
      logLevel="1"
      discretization="fluidTPFA"
      targetRegions="{ Domain }"
      temperature="300">
      <NonlinearSolverParameters
        newtonTol="1.0e-9"
        lineSearchAction="None"
        newtonMaxIter="40"/>
      <LinearSolverParameters
        directParallel="0"/>
    </CompositionalMultiphaseFVM>

  </Solvers>

</Problem>

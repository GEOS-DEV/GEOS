<?xml version="1.0" ?>

<Problem>
  <Included>
     <File name="faultPoroelastic_base.xml"/>
  </Included>

  <Solvers gravityVector="{0.0, 0.0, 0.0}">
    <SinglePhasePoromechanics 
      name="PoromechanicsSolver" 
      solidSolverName="mechanicsSolver"
      fluidSolverName="SinglePhaseFlowSolver"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Domain }">
      <LinearSolverParameters 
        solverType="direct"
        directParallel="0"
        logLevel="0"
      />
      <NonlinearSolverParameters
        newtonMaxIter = "40"
      />
    </SinglePhasePoromechanics>

    <SolidMechanics_LagrangianFEM 
      name="mechanicsSolver" 
      timeIntegrationOption="QuasiStatic"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Domain }">
      <NonlinearSolverParameters
        newtonTol = "1.0e-5"
        newtonMaxIter = "15"/>      
    </SolidMechanics_LagrangianFEM>

    <SinglePhaseFVM 
      name="SinglePhaseFlowSolver"
      logLevel="1"
      discretization="singlePhaseTPFA"
      targetRegions="{ Domain }"> 
      <NonlinearSolverParameters
        newtonTol = "1.0e-6"
        newtonMaxIter = "8"
      />       
    </SinglePhaseFVM>
  </Solvers>

  <Mesh>
    <PAMELAMesh
      name="FaultModel"
      file="faultMesh_smoke.msh"/>
  </Mesh>

  <FieldSpecifications>
    <FieldSpecification 
      name="injection"
      initialCondition="0"
      setNames="{all}"
      objectPath="ElementRegions/Domain/HANDINGWALL_HEX"
      fieldName="pressure"      
      scale="55.0e6"/>   	  
  </FieldSpecifications>

  <Events maxTime="2.0">
    <PeriodicEvent
      name="outputs"
      timeFrequency="2.0"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="solverApplications"
      forceDt="10"
      target="/Solvers/PoromechanicsSolver"/>	

    <PeriodicEvent
      name="restarts"
      timeFrequency="2.0"
      targetExactTimestep="0"
      target="/Outputs/restartOutput"  />   
  </Events>

</Problem>

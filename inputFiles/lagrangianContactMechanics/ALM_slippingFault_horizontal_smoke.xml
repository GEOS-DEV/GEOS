<?xml version="1.0" ?>

<Problem>

  <Included>
    <File name="./SlippingFault_horizontal_smoke.xml"/>
  </Included>

  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <SolidMechanicsAugmentedLagrangianContact
      name="AugmentedLagrangian"
      logLevel="2"
      timeIntegrationOption="QuasiStatic"
      discretization="FE1"
      targetRegions="{ Region, Fracture }">
      <NonlinearSolverParameters
        newtonTol="1.0e-6"
        logLevel="2"
        maxNumConfigurationAttempts="25"
        newtonMaxIter="10"
        lineSearchAction="Require"
        lineSearchMaxCuts="2"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SolidMechanicsAugmentedLagrangianContact>
  </Solvers>

  <Events
    maxTime="1.0">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGen"/>

    <PeriodicEvent
      name="solverApplications"
      beginTime="0.0"
      endTime="1.0"
      forceDt="0.1"
      target="/Solvers/AugmentedLagrangian"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="0.5"
      target="/Outputs/restartOutput"/>

    <PeriodicEvent
      name="outputs"
      beginTime="0.0"
      endTime="1.0"
      forceDt="0.1"
      target="/Outputs/vtkOutput"/>
  </Events> 

</Problem>

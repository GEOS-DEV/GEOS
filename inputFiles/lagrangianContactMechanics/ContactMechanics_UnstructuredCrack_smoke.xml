<?xml version="1.0" ?>

<Problem>

  <Included>
    <File
      name="./ContactMechanics_UnstructuredCrack_base.xml"/>
  </Included>

  <Mesh>
    <PAMELAMeshGenerator
      name="CubeHex"
      file="crackInPlane_smoke.msh"/>
  </Mesh>

  <Geometry>
    <BoundedPlane
      name="fracture"
      normal="{ -0.342020143325669, 0.939692620785908, 0.0 }"
      origin="{ 0.0, 0.0, 0.0 }"
      lengthVector="{ 0.939692620785908, 0.342020143325669, 0.0 }"
      widthVector="{ 0.0, 0.0, 1.0 }"
      dimensions="{ 2, 10 }"/>

    <BoundedPlane
      name="core"
      normal="{ -0.342020143325669, 0.939692620785908, 0.0 }"
      origin="{ 0.0, 0.0, 0.0 }"
      lengthVector="{ 0.939692620785908, 0.342020143325669, 0.0 }"
      widthVector="{ 0.0, 0.0, 1.0 }"
      dimensions="{ 2, 10 }"/>

    <Box
      name="rightPoint"
      xMin=" { 4.9, -0.5, -0.01 }"
      xMax="{ 5.1, 0.5, 0.16 }"/>

    <Box
      name="leftPoint"
      xMin="{ -5.1, -0.5, -0.01 }"
      xMax="{ -4.9, 0.5, 0.16 }"/>

    <Box
      name="topPoint"
      xMin="{ -0.5, 4.9, -0.01 }"
      xMax="{ 0.5, 5.1, 0.16 }"/>

    <Box
      name="bottomPoint"
      xMin="{ -0.5, -5.1, -0.01 }"
      xMax="{ 0.5, -4.9, 0.16 }"/>

    <Box
      name="front"
      xMin="{ -5.1, -5.1, -0.01 }"
      xMax="{ 5.1, 5.1, 0.01 }"/>

    <Box
      name="rear"
      xMin="{ -5.1, -5.1, 0.14 }"
      xMax="{ 5.1, 5.1, 0.16 }"/>

    <Box
      name="xmin"
      xMin="{ -5.1, -5.1, -0.01 }"
      xMax="{ -4.9, 5.1, 0.16 }"/>

    <Box
      name="xmax"
      xMin="{ 4.9, -5.1, -0.01 }"
      xMax="{ 5.1, 5.1, 0.16 }"/>
  </Geometry>

  <Events
    maxTime="2.0">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGen"/>

    <PeriodicEvent
      name="solverApplications"
      beginTime="0.0"
      endTime="2.0"
      forceDt="1.0"
      target="/Solvers/lagrangiancontact"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="1.0"
      targetExactTimestep="0"
      target="/Outputs/restartOutput"/>

    <!-- This event is applied every 1.0s.  The targetExactTimestep
    flag allows this event to request a dt modification to match an
    integer multiple of the timeFrequency. -->
    <PeriodicEvent
      name="outputs"
      timeFrequency="1"
      targetExactTimestep="0"
      target="/Outputs/siloOutput"/>
  </Events>

</Problem>

<?xml version="1.0" ?>

<Problem>
  <!-- SPHINX_Gravity -->
  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <!-- SPHINX_GravityEnd -->
    <!-- SPHINX_SolidMechanicsSolver -->
    <SolidMechanicsLagrangianSSLE
      name="lagsolve"
      timeIntegrationOption="QuasiStatic"
      discretization="FE1"
      targetRegions="{ Omega }"
      >
      <!-- SPHINX_SolidMechanicsSolverEnd -->
      <NonlinearSolverParameters
        newtonTol="1.0e-6"
        newtonMaxIter="8"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SolidMechanicsLagrangianSSLE>
  </Solvers>

  <!-- SPHINX_WellboreMesh -->
  <Mesh>
    <InternalWellbore
      name="mesh1"
      elementTypes="{ C3D8 }"
      radius="{ 0.1, 2 }"
      theta="{ 0, 180 }"
      zCoords="{ 0, 3 }"
      nr="{ 5 }"
      nt="{ 8 }"
      nz="{ 3 }"
      trajectory="{ { -0.1, 0.0, 0.0 },
                    { 0.1, 0.0, 3.0 } }"
      autoSpaceRadialElems="{ 1 }"
      useCartesianOuterBoundary="0"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <!-- SPHINX_WellboreMeshEnd -->
  <Events
    maxTime="3.0">
    <!-- This event is applied every cycle, and overrides the
    solver time-step request -->
    <!-- SPHINX_Execution -->
    <PeriodicEvent
      name="solverApplications"
      forceDt="1.0"
      target="/Solvers/lagsolve"/>

    <!-- SPHINX_ExecutionEnd -->
    <!-- This event is applied every 5.0e-5s.  The targetExactTimestep
    flag allows this event to request a dt modification to match an
    integer multiple of the timeFrequency. -->
    <PeriodicEvent
      name="outputs"
      timeFrequency="1.0"
      target="/Outputs/siloOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="1"
      targetExactTimestep="0"
      target="/Outputs/restartOutput"/>
  </Events>

  <!-- SPHINX_FEDiscretization -->
  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <!-- SPHINX_FEDiscretizationEnd -->
  <ElementRegions>
    <CellElementRegion
      name="Omega"
      cellBlocks="{ * }"
      materialList="{ shale }"/>
  </ElementRegions>

  <Constitutive>
    <!-- SPHINX_Material -->
    <ElasticIsotropic
      name="shale"
      defaultDensity="2700"
      defaultBulkModulus="5.5556e9"
      defaultShearModulus="4.16667e9"/>

    <!-- SPHINX_MaterialEnd -->
  </Constitutive>

  <!-- SPHINX_BoundaryConditions -->
  <FieldSpecifications>
    <FieldSpecification
      name="xConstraint"
      objectPath="nodeManager"
      fieldName="totalDisplacement"
      component="0"
      scale="0.0"
      setNames="{ rpos }"/>

    <FieldSpecification
      name="yConstraint"
      objectPath="nodeManager"
      fieldName="totalDisplacement"
      component="1"
      scale="0.0"
      setNames="{ rpos }"/>

    <FieldSpecification
      name="zconstraint"
      objectPath="nodeManager"
      fieldName="totalDisplacement"
      component="2"
      scale="0.0"
      setNames="{ zneg, zpos }"/>

    <Traction
      name="innerPressure"
      objectPath="faceManager"
      tractionType="normal"
      scale="-1.0e6"
      functionName="timeFunction"
      setNames="{ rneg }"/>
  </FieldSpecifications>

  <!-- SPHINX_BoundaryConditionsEnd -->
  <!-- SPHINX_TableFunction -->
  <Functions>
    <TableFunction
      name="timeFunction"
      inputVarNames="{ time }"
      coordinates="{ 0.0, 1.0, 10.0 }"
      values="{ 0.0, 0.0, 10.0 }"/>
  </Functions>

  <!-- SPHINX_TableFunctionEnd -->
  <Outputs>
    <Silo
      name="siloOutput"
      parallelThreads="32"
      childDirectory="sub"/>

    <Restart
      name="restartOutput"/>
  </Outputs>
</Problem>

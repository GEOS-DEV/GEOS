<?xml version="1.0" ?>

<Problem>
  <Mesh>
    <InternalMesh
      name="mesh1"
      cellBlockNames="{ cb1, cb2 }"
      elementTypes="{ C3D8 }"
      nx="{ 1 }"
      ny="{ 1 }"
      nz="{ 10, 10 }"
      xCoords="{ 0, 100 }"
      yCoords="{ 0, 100 }"
      zCoords="{ 0, 100, 200 }"/>
  </Mesh>

  <!-- With this value of g, the stress matches what we'd expect with the correct value: -12998.1 -->
  <Solvers
    gravityVector="{ 0.0, 0.0, -9.81 }">
    <SolidMechanicsLagrangianSSLE
      name="lagsolve"
      timeIntegrationOption="QuasiStatic"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Region1 }"
      >
      <NonlinearSolverParameters
        newtonTol="1.0e-8"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SolidMechanicsLagrangianSSLE>
  </Solvers>

  <Outputs>
    <Silo
      name="siloOutput"
      plotLevel="3"
      parallelThreads="16"/>

    <Restart
      name="restartOutput"/>
  </Outputs>

  <Events
    maxTime="20">
    <PeriodicEvent
      name="outputs"
      target="/Outputs/siloOutput"/>

    <PeriodicEvent
      name="solverApplications_a"
      maxEventDt="10.0"
      target="/Solvers/lagsolve"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="10.0"
      target="/Outputs/restartOutput"/>
  </Events>

  <ElementRegions>
    <CellElementRegion
      name="Region1"
      cellBlocks="{ cb1 }"
      materialList="{ water, rock }"/>

    <CellElementRegion
      name="Region2"
      cellBlocks="{ cb2 }"
      materialList="{ }"/>
  </ElementRegions>

  <Constitutive>
    <CompressibleSinglePhaseFluid
      name="water"
      defaultDensity="1000"
      defaultViscosity="0.001"
      referencePressure="0.0"
      compressibility="5e-10"
      referenceViscosity="1.0e-3"
      viscosibility="0.0"/>

    <ElasticIsotropic
      name="rock"
      defaultDensity="2650"
      defaultBulkModulus="5.5556e9"
      defaultShearModulus="4.16667e9"/>
  </Constitutive>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <FieldSpecifications>
    <FieldSpecification
      name="x_constraint"
      component="0"
      fieldName="totalDisplacement"
      objectPath="nodeManager"
      scale="0.0"
      setNames="{ xneg, xpos }"/>

    <FieldSpecification
      name="y_constraint"
      component="1"
      fieldName="totalDisplacement"
      objectPath="nodeManager"
      scale="0.0"
      setNames="{ yneg, ypos }"/>

    <FieldSpecification
      name="z_constraint"
      component="2"
      fieldName="totalDisplacement"
      objectPath="nodeManager"
      scale="0.0"
      setNames="{ zneg }"/>
  </FieldSpecifications>
</Problem>

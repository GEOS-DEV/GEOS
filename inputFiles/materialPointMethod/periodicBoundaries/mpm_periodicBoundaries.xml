srun -n 25 /usr/workspace/crook5/GEOS/build-quartz-clang-14-release/bin/geosx -i mpm_diskThruPBC.xml
-->
<Problem>

  <Mesh>
    <InternalMesh
      name="backgroundGrid"
      elementTypes="{ C3D8 }"
      xCoords="{-0.5,0.5}"
      yCoords="{-0.5,0.5}"
      zCoords="{-0.06521739130434782,0.06521739130434782}"
      nx="{25}"
      ny="{25}"
      nz="{3}"
      periodic="{ 1, 1, 0}"
      cellBlockNames="{ cb1 }"/>
      
    <ParticleMesh
      name="particles"
      particleFile="mpmParticleFile_diskThruPBC"
      headerFile="mpmHeaderFile_diskThruPBC"
      particleBlockNames="{ pb1 }"
      particleMaterialNames="{ aluminum }"
      particleTypes="{ CPDI }"/>
  </Mesh>

  <ElementRegions>
    <CellElementRegion
      name="CellRegion1"
      meshBody="backgroundGrid"
      cellBlocks="{ cb1 }"
      materialList="{ null }"/>
  </ElementRegions>

  <ParticleRegions>
    <ParticleRegion
        name="ParticleRegion1"
        meshBody="particles"
        particleBlocks="{ pb1 }"
        materialList="{aluminum}"/>
  </ParticleRegions>

  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <SolidMechanics_MPM
      name="mpmsolve"
      discretization="FE1"
      targetRegions="{ backgroundGrid/CellRegion1, particles/ParticleRegion1 }"
      timeIntegrationOption="ExplicitDynamic"
      cflFactor="0.5"
      initialDt="1e-16"
      solverProfiling="0"
      planeStrain="1"
      needsNeighborList="0"
      boundaryConditionTypes="{0, 0, 0, 0, 1, 1}"
      neighborRadius="-1.01">
    </SolidMechanics_MPM>
  </Solvers>

  <Constitutive>
    <ElasticIsotropic
      name="null"
      defaultDensity="1000"
      defaultBulkModulus="1.0e9"
      defaultShearModulus="1.0e9"/>
    <ElasticIsotropic
    	name="aluminum"
    	defaultDensity="2.7"
    	defaultBulkModulus="70.0"
    	defaultShearModulus="24.0"/>
  </Constitutive>

  <Events
    maxTime="1.0">
    <PeriodicEvent
      name="solverApplications"
      target="/Solvers/mpmsolve"/>
    <PeriodicEvent
      name="outputs"
      timeFrequency="0.005"
      target="/Outputs/vtkOutput"/>
    <PeriodicEvent
      name="restart"
      timeFrequency="0.05"
      target="/Outputs/restartOutput"/> 
    <HaltEvent
      maxRuntime="60"/>
  </Events>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <Outputs>
    <VTK
      name="vtkOutput"
      format="ascii"/>
    <Restart
      name="restartOutput"/>
  </Outputs>

</Problem>


<?xml version="1.0" ?>

<Problem>
  <Included name="primary_includes">
    <File name="./PoroElastic_efem-edfm_verticalFrac_base.xml" />
  </Included>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 10 }"
      yCoords="{ 0, 20 }"
      zCoords="{ 0, 1 }"
      nx="{ 75 }"
      ny="{ 150 }"
      nz="{ 1 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Geometry>
    <Rectangle
      name="FracturePlane"
      normal="{ 1, 0, 0 }"
      origin="{ 5.0, 10.0, 0.5 }"
      lengthVector="{ 0, 1, 0 }"
      widthVector="{ 0, 0, 1 }"
      dimensions="{ 12, 4 }"/>
  </Geometry>

  <Events
    maxTime="4.32e5">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGenerator"/>

    <PeriodicEvent
      name="outputs"
      timeFrequency="3.6e3"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="pressureCollection"
      timeFrequency="3.6e3"
      target="/Tasks/pressureCollection"/>

    <PeriodicEvent
      name="pressureOutput"
      timeFrequency="3.6e3"
      target="/Outputs/pressureHistoryOutput"/>

    <PeriodicEvent
      name="apertureCollection"
      target="/Tasks/apertureCollection" />

    <PeriodicEvent
      name="apertureOutput"
      targetExactTimestep="0"
      target="/Outputs/apertureOutput" />

    <PeriodicEvent
      name="solverApplication0"
      endTime="100.0"
      forceDt="10.0"
      target="/Solvers/poroSolver"/>

    <PeriodicEvent
      name="solverApplication1"
      beginTime="100.0"
      endTime="1000.0"
      forceDt="100.0"
      target="/Solvers/poroSolver"/>

    <PeriodicEvent
      name="solverApplication2"
      beginTime="1000.0"
      endTime="4.32e5"
      forceDt="1000.0"
      target="/Solvers/poroSolver"/>
   </Events>
</Problem>
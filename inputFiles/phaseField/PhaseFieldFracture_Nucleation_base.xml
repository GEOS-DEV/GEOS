<?xml version="1.0" ?>

<Problem>
  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <PhaseFieldFracture
      name="PhaseFieldSolve"
      solidSolverName="SolidMechSolve"
      damageSolverName="DamageSolve"
      logLevel="1"
      targetRegions="{ Region1 }">
      <NonlinearSolverParameters
        couplingType="Sequential"
        lineSearchAction="None"  
        newtonMaxIter="100"/>
      <LinearSolverParameters
        directParallel="0"/>
    </PhaseFieldFracture>

    <SolidMechanicsLagrangianSSLE
      name="SolidMechSolve"
      timeIntegrationOption="QuasiStatic"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Region1 }"
      >
      <NonlinearSolverParameters
        newtonMaxIter="200"
        newtonTol="1.0e-6"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SolidMechanicsLagrangianSSLE>

    <PhaseFieldDamageFEM
      name="DamageSolve"
      discretization="FE1"
      timeIntegrationOption="SteadyState"
      fieldName="Damage"
      
      localDissipation="Linear"
      irreversibilityFlag="1"
      damageUpperBound="1.0"
      logLevel="1"
      targetRegions="{ Region1 }">
      <NonlinearSolverParameters
        newtonMaxIter="200"
        newtonTol="1.0e-6"/>
      <LinearSolverParameters
        directParallel="0"/>
    </PhaseFieldDamageFEM>

    <SurfaceGenerator
      name="SurfaceGen"
      targetRegions="{ Region1 }"
      initialRockToughness="0"
      mpiCommOrder="1"/>
  </Solvers>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion
      name="Region1"
      cellBlocks="{ cb1 }"
      materialList="{ rock }"/>

    <SurfaceElementRegion
      name="Fracture"
      defaultAperture="0.0"
      materialList="{ rock }"/>
  </ElementRegions>

</Problem>

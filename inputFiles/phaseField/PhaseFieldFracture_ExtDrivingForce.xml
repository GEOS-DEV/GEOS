<?xml version="1.0" ?>

<Problem>
  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <PhaseFieldFracture
      name="PhaseFieldSolve"
      solidSolverName="SolidMechSolve"
      damageSolverName="DamageSolve"
      couplingTypeOption="FixedStress"
      logLevel="2"
      subcycling="0"
      discretization="FE1"
      targetRegions="{ Region1 }">
      <NonlinearSolverParameters
        newtonMaxIter="100"/>
      <LinearSolverParameters
        directParallel="0"/>
    </PhaseFieldFracture>

    <SolidMechanicsLagrangianSSLE
      name="SolidMechSolve"
      timeIntegrationOption="QuasiStatic"
      logLevel="1"
      discretization="FE1"
      targetRegions="{ Region1 }"
      >
      <NonlinearSolverParameters
        newtonMaxIter="200"
        newtonTol="1.0e-12"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SolidMechanicsLagrangianSSLE>

    <PhaseFieldDamageFEM
      name="DamageSolve"
      discretization="FE1"
      timeIntegrationOption="SteadyState"
      fieldName="Damage"
      
      localDissipation="Linear"
      logLevel="1"
      targetRegions="{ Region1 }">
      <NonlinearSolverParameters
        newtonMaxIter="200"
        newtonTol="1.0e-12"/>
      <LinearSolverParameters
        directParallel="0"/>
    </PhaseFieldDamageFEM>
  </Solvers>

  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ -1, 1 }"
      yCoords="{ -1, 1 }"
      zCoords="{ -1, 1 }"
      nx="{ 4 }"
      ny="{ 4 }"
      nz="{ 4 }"
      cellBlockNames="{ cb1 }"/>
  </Mesh>

  <Events
    maxTime="100.0">
    <!-- <SoloEvent name="siloOutput0"
               target="/Outputs/SiloOutput"/> -->
    <!-- This event is applied every cycle, and overrides the
    solver time-step request -->
    <PeriodicEvent
      name="solverApplications"
      forceDt="1.0"
      target="/Solvers/PhaseFieldSolve"/>

    <!-- This event is applied every 1.0s.  The targetExactTimestep
    flag allows this event to request a dt modification to match an
    integer multiple of the timeFrequency. -->
    <PeriodicEvent
      name="vtkOutput"
      timeFrequency="1.0"
      target="/Outputs/DamageExtDF_VTKOutput"/>

    <PeriodicEvent
      name="siloOutputs"
      timeFrequency="1.0"
      target="/Outputs/DamageExtDF_SiloOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="20.0"
      targetExactTimestep="0"
      target="/Outputs/restartOutput"/>
  </Events>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion
      name="Region1"
      cellBlocks="{ cb1 }"
      materialList="{ graphite }"/>
  </ElementRegions>

  <Constitutive>
    <DamageExtDrivingForceElasticIsotropic
      name="graphite"
      defaultDensity="2700"
      defaultBulkModulus="2.00e5"
      defaultShearModulus="3.00e5"
      lengthScale="0.25"
      criticalFractureEnergy="2.7"
      criticalStrainEnergy="0"
      tensileStrength="27"
      compressiveStrength="77"
      deltaCoefficient="1.45"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification
      name="xtraction"
      fieldName="TotalDisplacement"
      component="0"
      objectPath="nodeManager"
      scale="1.00e-4"
      functionName="f_b"
      setNames="{ xpos }"/>

    <FieldSpecification
      name="fixedY"
      fieldName="TotalDisplacement"
      component="1"
      objectPath="nodeManager"
      setNames="{ all }"/>

    <FieldSpecification
      name="fixedX"
      fieldName="TotalDisplacement"
      component="0"
      objectPath="nodeManager"
      setNames="{ xneg }"/>

    <FieldSpecification
      name="fixedZ"
      fieldName="TotalDisplacement"
      component="2"
      objectPath="nodeManager"
      setNames="{ all }"/>

    <FieldSpecification
      name="pointSource"
      fieldName="Damage"
      objectPath="nodeManager"
      scale="1"
      setNames="{ centerPoint }"/>
  </FieldSpecifications>

  <Functions>
    <TableFunction
      name="f_b"
      inputVarNames="{ time }"
      coordinates="{ 0, 100 }"
      values="{ -1, 99 }"/>
  </Functions>

  <Outputs>
    <Silo
      name="DamageExtDF_SiloOutput"/>

    <VTK
      name="DamageExtDF_VTKOutput"
      plotFileRoot="plot"/>

    <Restart
      name="restartOutput"/>
  </Outputs>

  <Geometry>
    <Box
      name="centerPoint"
      xMin="{ -0.001, -0.001, -0.001 }"
      xMax="{ +0.001, +0.001, +0.001 }"/>
  </Geometry>
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./fractureMatrixFlow_conforming_base.xml"/>
  </Included>
 
  <Mesh>
    <VTKMesh
      name="mesh"
      file="inclinedFracture_nodup.vtk"
      regionAttribute="CellEntityIds"/>
  </Mesh>

   <Events
    maxTime="2e3"
    logLevel="3">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGenerator"/>

    <PeriodicEvent
      name="solverApplications"
      forceDt="1e3"
      target="/Solvers/SinglePhaseFlow"/>

    <PeriodicEvent
      name="outputs"
      target="/Outputs/vtkOutput"/>

    <PeriodicEvent
      name="restarts"
      timeFrequency="1e3"
      target="/Outputs/sidreRestart"/>
  </Events>

  <Outputs>
    <VTK
      name="vtkOutput"
      plotFileRoot="fracMatFlow_conforming_inclined"
      plotLevel="2"
      format="binary"/>

    <Restart
      name="sidreRestart"/>
  </Outputs>
</Problem>

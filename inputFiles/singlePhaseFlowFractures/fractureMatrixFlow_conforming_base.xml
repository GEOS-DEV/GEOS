<?xml version="1.0" ?>

<Problem>
  <Solvers
    gravityVector="{ 0.0, 0.0, 0.0 }">
    <SinglePhaseFVM
      name="SinglePhaseFlow"
      logLevel="1"
      discretization="singlePhaseTPFA"
      targetRegions="{ RockMatrix, Fracture }">
      <NonlinearSolverParameters
        newtonTol="1.0e-6"
        newtonMaxIter="8"/>
      <LinearSolverParameters
        directParallel="0"/>
    </SinglePhaseFVM>

    <SurfaceGenerator
      name="SurfaceGenerator" 
      targetRegions="{ Fracture }"
      rockToughness="1e6"
      mpiCommOrder="1"/>
  </Solvers>

  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation
        name="singlePhaseTPFA"/>
    </FiniteVolume>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion
      name="RockMatrix"
      cellBlocks="{ 1_hexahedra, 2_hexahedra, 3_hexahedra }"
      materialList="{ water, rock }"/>

    <SurfaceElementRegion
      name="Fracture"
      defaultAperture="1e-3"
      materialList="{ water, fractureFilling }"
      subRegionType="faceElement"/>
  </ElementRegions>

  <Constitutive>
    <CompressibleSinglePhaseFluid
      name="water"
      defaultDensity="1000"
      defaultViscosity="0.001"
      referencePressure="0.0"
      compressibility="5e-10"
      viscosibility="0.0"/>

    <CompressibleSolidParallelPlatesPermeability
      name="fractureFilling"
      solidModelName="nullSolid"
      porosityModelName="fracturePorosity"
      permeabilityModelName="fracturePerm"/>

    <CompressibleSolidConstantPermeability
      name="rock"
      solidModelName="nullSolid"
      porosityModelName="rockPorosity"
      permeabilityModelName="rockPerm"/>

    <NullModel
      name="nullSolid"/>

    <PressurePorosity
      name="rockPorosity"
      defaultReferencePorosity="0.01"
      referencePressure="0.0"
      compressibility="1.0e-9"/>

    <ConstantPermeability
      name="rockPerm"
      permeabilityComponents="{ 2.0e-10, 2.0e-10, 2.0e-10 }"/>

    <PressurePorosity
      name="fracturePorosity"
      defaultReferencePorosity="1.00"
      referencePressure="0.0"
      compressibility="0.0"/>

    <ParallelPlatesPermeability
      name="fracturePerm"/>
  </Constitutive>

  <FieldSpecifications>
    <FieldSpecification
      name="frac"
      initialCondition="1"
      setNames="{ 4 }"
      objectPath="faceManager"
      fieldName="ruptureState"
      scale="1"/>

    <FieldSpecification
      name="Porosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix"
      fieldName="rockPorosity_referencePorosity"
      scale="0.01"/>

    <FieldSpecification
      name="fracPorosity"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/Fracture"
      fieldName="fracturePorosity_porosity"
      scale="1.00"/>

    <FieldSpecification
      name="initialPressure"
      initialCondition="1"
      setNames="{ all }"
      objectPath="ElementRegions/RockMatrix/2_hexahedra"
      fieldName="pressure"
      scale="0.0"/>

    <FieldSpecification
      name="sourceTerm"
      objectPath="ElementRegions/RockMatrix/1_hexahedra"
      fieldName="pressure"
      scale="1e7"
      setNames="{all}"/>

    <FieldSpecification
      name="sinkTerm"
      objectPath="ElementRegions/RockMatrix/3_hexahedra"
      fieldName="pressure"
      scale="0.0"
      setNames="{all}"/>

    <!--FieldSpecification
      name="sourceTerm"
      objectPath="faceManager"
      fieldName="pressure"
      scale="1.0e7"
      setNames="{ 6 }"/>

   <FieldSpecification
      name="sinkTerm"
      objectPath="faceManager"
      fieldName="pressure"
      scale="0.0"
      setNames="{ 7 }"/-->  
  </FieldSpecifications>
</Problem>

<?xml version="1.0" ?>

<Problem>
   <Included>
    <File name="./dfit_kgd_base.xml"/>
  </Included>
  
   <Mesh>
    <InternalMesh 
      name="mesh1"
      elementTypes="{C3D8}"
      xCoords="{ -100, 0, 100 }"
      yCoords="{ 0, 50 }"
      zCoords="{ 0, 1 }"
      nx="{ 10, 10 }"
      ny="{ 100 }"
      nz="{ 2 }"
      xBias="{ 0.5, -0.5 }"
      cellBlockNames="{cb1}"/>
  </Mesh>

  <Geometry>
    <Box
      name="fracture"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{  0.01,  1.01,  1.01 }"/>

    <Box
      name="source"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{  0.01,  1.01,  1.01 }"/>

    <Box
      name="core"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{  0.01, 50.01,  1.01 }"/>
  </Geometry>
  
  <Events
    maxTime="300.0">
    <SoloEvent
      name="preFracture"
      target="/Solvers/SurfaceGen"/>    

    <PeriodicEvent
      name="outputs0"
      timeFrequency="0.1"
      targetExactTimestep="0"
      beginTime="0.0"
      endTime="10.0"
      target="/Outputs/vtkOutput"/>   

    <PeriodicEvent
      name="outputs1"
      timeFrequency="1.0"
      targetExactTimestep="0"
      beginTime="10.0"
      target="/Outputs/vtkOutput"/>
    
    <PeriodicEvent
      name="timeHistoryCollection0"
      timeFrequency="1.0"
      targetExactTimestep="0"
      target="/Tasks/pressureCollection" />

    <PeriodicEvent
      name="timeHistoryCollection1"
      timeFrequency="1.0"
      targetExactTimestep="0"
      target="/Tasks/apertureCollection" />

    <PeriodicEvent
      name="timeHistoryCollection2"
      timeFrequency="1.0"
      targetExactTimestep="0"
      target="/Tasks/hydraulicApertureCollection" /> 

   <PeriodicEvent
      name="timeHistoryCollection3"
      timeFrequency="1.0"
      targetExactTimestep="0"
      target="/Tasks/areaCollection" />      

    <PeriodicEvent
      name="timeHistoryOutput"
      timeFrequency="1.0"
      targetExactTimestep="0"
      target="/Outputs/timeHistoryOutput"/> 

   <PeriodicEvent
      name="solverApplications0"
      beginTime="0.0"
      endTime="10.0"
      forceDt="0.1"
      target="/Solvers/hydrofracture"/>

   <PeriodicEvent
      name="solverApplications1"
      beginTime="10.0"
      endTime="20.0"
      forceDt="1"
      target="/Solvers/hydrofracture"/>

    <PeriodicEvent
      name="solverApplications2"
      beginTime="20.0"
      endTime="300.0"
      forceDt="2.0"
      target="/Solvers/hydrofracture"/>
  </Events>
  
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Solvers>
    <!-- define the solver -->
    <!-- define the source coordinates -->
    <!-- define the time source frequency -->
    <!-- define the receiver coordinates -->
    <ElasticSEM
      name="elasticSolver"
      cflFactor="0.25"
      discretization="FE1"
      targetRegions="{ Region }"
      sourceCoordinates="{ { 10.05, 10.05, 10.05 } }"
      timeSourceFrequency="2.0"
      receiverCoordinates="{ { 11.05, 10.05, 10.05 } }"/>
  </Solvers>

  <!-- hexahedral mesh generated internally by GEOSX -->
  <Mesh>
    <InternalMesh
      name="mesh"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 20 }"
      yCoords="{ 0, 20 }"
      zCoords="{ 0, 20 }"
      nx="{ 20 }"
      ny="{ 20 }"
      nz="{ 20 }"
      cellBlockNames="{ cb }"/>
  </Mesh>

  <Geometry>
    <Box
      name="zpos"
      xMin="{-0.01, -0.01, 20.01}"
      xMax="{ 20.01, 20.01, 20.01}"/>

  </Geometry>
  <Events
    maxTime="0.2">

    <!-- control the timestepping here with forceDt -->
    <PeriodicEvent
      name="solverApplications"
      forceDt="0.001"
      target="/Solvers/elasticSolver"/>

    <!-- generate an output that can be read from VTK -->
    <PeriodicEvent
      name="vtk"
      timeFrequency="0.1"
      targetExactTimestep="0"
      target="/Outputs/vtkOutput"/>

    <!-- two events to output pressure in an hdf5 file -->
    <PeriodicEvent
      name="timeHistoryCollectionx"
      timeFrequency="0.005"
      targetExactTimestep="1"
      target="/Tasks/displacementxCollection"/>
    <PeriodicEvent
      name="timeHistoryCollectiony"
      timeFrequency="0.005"
      targetExactTimestep="1"
      target="/Tasks/displacementyCollection"/>
    <PeriodicEvent
      name="timeHistoryCollectionz"
      timeFrequency="0.005"
      targetExactTimestep="1"
      target="/Tasks/displacementzCollection"/>
    <PeriodicEvent
      name="timeHistoryOutputx"
      timeFrequency="0.05"
      targetExactTimestep="0"
      target="/Outputs/timeHistoryOutputx"/>
    <PeriodicEvent
      name="timeHistoryOutputy"
      timeFrequency="0.05"
      targetExactTimestep="0"
      target="/Outputs/timeHistoryOutputy"/>
    <PeriodicEvent
      name="timeHistoryOutputz"
      timeFrequency="0.05"
      targetExactTimestep="0"
      target="/Outputs/timeHistoryOutputz"/>

    <!-- restart event -->
    <PeriodicEvent
      name="restarts"
      timeFrequency="0.1"
      targetExactTimestep="1"
      target="/Outputs/restartOutput"/>

  </Events>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion
      name="Region"
      cellBlocks="{ cb }"
      materialList="{ nullModel }"/>
  </ElementRegions>

  <Constitutive>
    <NullModel
      name="nullModel"/>
  </Constitutive>

  <FieldSpecifications>

    <!-- 1) The initial displacement field -->
    <FieldSpecification
      name="initialdisplacementx"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="displacementx_n"
      scale="0.0"/>

    <FieldSpecification
      name="initialdisplacementy"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="displacementy_n"
      scale="0.0"/>

    <FieldSpecification
      name="initialdisplacementz"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="displacementz_n"
      scale="0.0"/>

    <FieldSpecification
      name="initialdisplacementxnm1"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="displacementx_nm1"
      scale="0.0"/>

    <FieldSpecification
      name="initialdisplacementynm1"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="displacementy_nm1"
      scale="0.0"/>

    <FieldSpecification
      name="initialdisplacementznm1"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="displacementz_nm1"
      scale="0.0"/>

    <!-- 2) The velocity in the domain -->

    <FieldSpecification
      name="cellVelocityVp"
      initialCondition="1"
      objectPath="ElementRegions/Region/elementSubRegions/cb"
      fieldName="mediumVelocityVp"
      scale="150"
      setNames="{ all }"/>

    <FieldSpecification
      name="cellVelocityVs"
      initialCondition="1"
      objectPath="ElementRegions/Region/elementSubRegions/cb"
      fieldName="mediumVelocityVs"
      scale="106"
      setNames="{ all }"/>

    <FieldSpecification
      name="cellDensity"
      initialCondition="1"
      objectPath="ElementRegions/Region/elementSubRegions/cb"
      fieldName="mediumDensity"
      scale="1"
      setNames="{ all }"/>

    <!-- 3) The free surface and absorbing boundary condition the domain -->
    <FieldSpecification
      name="zposFreeSurface"
      objectPath="faceManager"
      fieldName="FreeSurface"
      scale="0.0"
      setNames="{ zpos }"/>

  </FieldSpecifications>


  <!-- collect the displacement values at the nodes -->
  <Tasks>
    <PackCollection
      name="displacementxCollection"
      objectPath="nodeManager"
      fieldName="displacementx_np1"/>
    <PackCollection
      name="displacementyCollection"
      objectPath="nodeManager"
      fieldName="displacementy_np1"/>
    <PackCollection
      name="displacementzCollection"
      objectPath="nodeManager"
      fieldName="displacementz_np1"/>
  </Tasks>

  <Outputs>

    <!-- output all the mesh values registered with a plot level LEVEL_0, LEVEL_1, LEVEL_2, LEVEL_3   -->
    <VTK
      name="vtkOutput"
      plotLevel="3"/>

    <!-- output the pressure values to a file named pressure_history.hdf5  -->
    <TimeHistory
      name="timeHistoryOutputx"
      sources="{ /Tasks/displacementxCollection }"
      filename="displacementx_history"/>

    <TimeHistory
      name="timeHistoryOutputy"
      sources="{ /Tasks/displacementyCollection }"
      filename="displacementy_history"/>

    <TimeHistory
      name="timeHistoryOutputz"
      sources="{ /Tasks/displacementzCollection }"
      filename="displacementz_history"/>

    <Restart
      name="restartOutput"/>

  </Outputs>

</Problem>

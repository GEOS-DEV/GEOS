<?xml version="1.0" ?>

<Problem>
  <Solvers>
    <!-- define the solver -->
    <!-- define the source coordinates -->
    <!-- define the time source frequency -->
    <!-- define the receiver coordinates -->
    <AcousticSEM
      name="acousticSolver"
      logLevel="1"
      cflFactor="0.25"
      discretization="FE1"
      targetRegions="{ interiorDomain, pmlDomain }"
      sourceCoordinates="{ { 55, 55, 55 }}"
      timeSourceFrequency="10.0"
      rickerOrder="2"
      outputSeismoTrace="1"
      dtSeismoTrace="0.0025"
      receiverCoordinates="{ { 80.1, 50.1, 10.1 } }"/>
  </Solvers>

  <Mesh>
    <!-- the interior and PML blocks -->
    <InternalMesh
      name="mesh"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 20, 80, 100 }"
      yCoords="{ 0, 20, 80, 100 }"
      zCoords="{ 0, 20, 80, 100 }"
      nx="{ 1, 3, 1}"
      ny="{ 1, 3, 1}"
      nz="{ 1, 3, 1}"
      cellBlockNames="{ cb-0_0_0, cb-1_0_0, cb-2_0_0, 
                        cb-0_1_0, cb-1_1_0, cb-2_1_0, 
                        cb-0_2_0, cb-1_2_0, cb-2_2_0, 
                        cb-0_0_1, cb-1_0_1, cb-2_0_1, 
                        cb-0_1_1, cb-1_1_1, cb-2_1_1, 
                        cb-0_2_1, cb-1_2_1, cb-2_2_1, 
                        cb-0_0_2, cb-1_0_2, cb-2_0_2, 
                        cb-0_1_2, cb-1_1_2, cb-2_1_2, 
			cb-0_2_2, cb-1_2_2, cb-2_2_2 }"/>
  </Mesh>

  <Geometry>
    <!-- tag the free surface boundary using box -->
    <Box
      name="top"
      xMin="{ -0.1, -0.1, -0.1}"
      xMax="{ 100.1, 100.1, 0.1 }"/>

      <Box
      name="bottom"
      xMin="{ -0.1, -0.1, 99.9}"
      xMax="{ 100.1, 100.1, 100.1 }"/>

      <Box
      name="left"
      xMin="{ -0.1, -0.1, -0.1}"
      xMax="{ 0.1, 100.1, 100.1 }"/>

      <Box
      name="right"
      xMin="{ 99.9, -0.1, -0.1}"
      xMax="{ 100.1, 100.1, 100.1 }"/>

      <Box
      name="front"
      xMin="{ -0.1, -0.1, -0.1}"
      xMax="{ 100.1, 0.1, 100.1 }"/>

      <Box
      name="back"
      xMin="{ -0.1, 99.9, -0.1}"
      xMax="{ 100.1, 100.1, 100.1 }"/>
  </Geometry>

  <Events
    maxTime="0.1">
    <!-- control the timestepping here with forceDt -->
    <PeriodicEvent
      name="solverApplications"
      forceDt="0.0025"
      target="/Solvers/acousticSolver"/>

    <!-- two events to output pressure in an hdf5 file -->
    <PeriodicEvent
      name="timeHistoryCollection"
      cycleFrequency="10"
      target="/Tasks/pressureCollection"/>

    <PeriodicEvent
      name="timeHistoryOutput"
      cycleFrequency="10"
      target="/Outputs/timeHistoryOutput"/>

    <!-- restart event -->
    <PeriodicEvent
      name="restarts"
      timeFrequency="0.05"
      target="/Outputs/restartOutput"/>

  </Events>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"
        formulation="SEM"/>
    </FiniteElements>
  </NumericalMethods>

 <ElementRegions>
    <!-- assign the interior and PML blocks to separate cell element regions -->
    <CellElementRegion
      name="interiorDomain"
      cellBlocks="{ cb-1_1_1 }"
      materialList="{ nullModel }"/>

    <CellElementRegion
      name="pmlDomain"
      cellBlocks="{ cb-0_0_0, cb-1_0_0, cb-2_0_0, 
                    cb-0_1_0, cb-1_1_0, cb-2_1_0, 
                    cb-0_2_0, cb-1_2_0, cb-2_2_0, 
                    cb-0_0_1, cb-1_0_1, cb-2_0_1, 
                    cb-0_1_1,           cb-2_1_1, 
                    cb-0_2_1, cb-1_2_1, cb-2_2_1, 
                    cb-0_0_2, cb-1_0_2, cb-2_0_2, 
                    cb-0_1_2, cb-1_1_2, cb-2_1_2, 
                    cb-0_2_2, cb-1_2_2, cb-2_2_2 }"
      materialList="{ nullModel }"/>
  </ElementRegions>


  <Constitutive>
    <NullModel
      name="nullModel"/>
  </Constitutive>

  <FieldSpecifications>
    <!-- The initial pressure field -->
    <FieldSpecification
      name="initialPressure"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="pressure_n"
      scale="0.0"/>

    <FieldSpecification
      name="initialPressure_nm1"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="pressure_nm1"
      scale="0.0"/>

    <!-- The free surface condition -->
    <FieldSpecification
      name="posFreeSurface"
      objectPath="faceManager"
      fieldName="FreeSurface"
      scale="0.0"
      setNames="{ top,
                  bottom,
                  left,
                  right,
                  front,
                  back}"/>

    <!-- The PML field specification assigned to the corresponding region -->
    <PML
      name="pml"
      objectPath="ElementRegions/pmlDomain"
      reflectivity="0.001"
      setNames="{ all }"/>

    <!-- The velocity in each region -->
    <FieldSpecification
      name="cellVelocity1"
      initialCondition="1"
      objectPath="ElementRegions/interiorDomain"
      fieldName="acousticVelocity"
      scale="2000"
      setNames="{ all }"/>

    <FieldSpecification
      name="cellDensity1"
      initialCondition="1"
      objectPath="ElementRegions/interiorDomain"
      fieldName="acousticDensity"
      scale="1"
      setNames="{ all }"/>


    <FieldSpecification
      name="cellVelocity2"
      initialCondition="1"
      objectPath="ElementRegions/pmlDomain"
      fieldName="acousticVelocity"
      scale="2000"
      setNames="{ all }"/>

    <FieldSpecification
      name="cellDensity2"
      initialCondition="1"
      objectPath="ElementRegions/pmlDomain"
      fieldName="acousticDensity"
      scale="1"
      setNames="{ all }"/>

  </FieldSpecifications>

  <!-- collect the pressure values at the nodes -->
  <Tasks>
    <PackCollection
      name="pressureCollection"
      objectPath="/Problem/domain/MeshBodies/mesh/meshLevels/FE1/nodeManager"
      fieldName="pressure_np1"/>

  </Tasks>

  <Outputs>

    <!-- output the pressure values to a file named pressure_history.hdf5  -->
    <TimeHistory
      name="timeHistoryOutput"
      sources="{ /Tasks/pressureCollection }"
      filename="pressure_history"/>

    <Restart
      name="restartOutput"/>

  </Outputs>

</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./acous3D_Q5_small_base.xml"/>
  </Included>

  <!-- hexahedral mesh generated internally by GEOSX -->
  <Mesh>
    <InternalMesh
      name="mesh"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 101 }"
      yCoords="{ 0, 101 }"
      zCoords="{ 0, 101 }"
      nx="{ 100 }"
      ny="{ 2 }"
      nz="{ 100 }"
      cellBlockNames="{ cb }"/>
  </Mesh>

  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"
        formulation="SEM"/>
    </FiniteElements>
  </NumericalMethods>

  <Geometry>
    <Box
      name="zpos"
      xMin="{ -0.01, -0.01, 100.99 }"
      xMax="{ 101.01, 101.01, 101.01 }"/>
  </Geometry>

    <!-- The free surface condition the domain -->
  <FieldSpecifications>
    <FieldSpecification
      name="zposFreeSurface"
      objectPath="mesh/FE2/faceManager"
      fieldName="FreeSurface"
      setNames="{ zpos }"/>
  </FieldSpecifications>
</Problem>

<?xml version="1.0" ?>

<Problem>
  <Included>
    <File name="./acous3DVTI_small_base.xml"/>
  </Included>

  <!-- hexahedral mesh generated internally by GEOSX -->
  <Mesh>
    <InternalMesh
      name="mesh"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 101 }"
      yCoords="{ 0, 101 }"
      zCoords="{ 0, 101 }"
      nx="{ 5 }"
      ny="{ 5 }"
      nz="{ 5 }"
      cellBlockNames="{ cb }"/>
  </Mesh>

  <Geometry>
    <Box
      name="zpos"
      xMin="{ -0.01, -0.01, 100.99 }"
      xMax="{ 101.01, 101.01, 101.01 }"/>
    <Box
      name="zneg"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 101.01, 101.01, 0.01 }"/>
    <Box
      name="xpos"
      xMin="{ 100.99, -0.01, -0.01 }"
      xMax="{ 101.01, 101.01, 101.01 }"/>
    <Box
      name="xneg"
      xMin="{ -0.01, -0.01, -0.01 }"
      xMax="{ 0.01, 101.01, 101.01 }"/>
    <Box
      name="ypos"
      xMin="{ -0.01, 100.99, -0.01 }"
      xMax="{ 101.01, 101.01, 101.01 }"/>
    <Box
      name="yneg"
      xMin="{  -0.01, -0.01, -0.01 }"
      xMax="{ 101.01, 0.01,  101.01 }"/>
  </Geometry>

    <!-- The free surface condition the domain -->
  <FieldSpecifications>
    <FieldSpecification
      name="zposFreeSurface"
      objectPath="faceManager"
      fieldName="FreeSurface"
      scale="0.0"
      setNames="{ zpos }"/>
    <FieldSpecification
      name="znegFreeSurface"
      objectPath="faceManager"
      fieldName="BottomSurface"
      scale="0.0"
      setNames="{ zneg }"/>
    <FieldSpecification
      name="LateralFreeSurface"
      objectPath="faceManager"
      fieldName="LateralSurface"
      scale="0.0"
      setNames="{ xpos, xneg, ypos, yneg }"/>
    <FieldSpecification
      name="Epsilon"
      initialCondition="1"
      objectPath="ElementRegions/Region/cb"
      fieldName="epsilon"
      scale="0.2"
      setNames="{ all }"/>
    <FieldSpecification
      name="Delta"
      initialCondition="1"
      objectPath="ElementRegions/Region/cb"
      fieldName="delta"
      scale="0.4"
      setNames="{ all }"/>
    <FieldSpecification
      name="f"
      initialCondition="1"
      objectPath="ElementRegions/Region/cb"
      fieldName="f"
      scale="1"
      setNames="{ all }"/>
  </FieldSpecifications>
</Problem>

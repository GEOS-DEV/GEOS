<?xml version="1.0" ?>

<Problem>
  <Solvers>
    <!-- define the solver -->
    <!-- we'll have to discuss the cflFactor with Randy -->
    <!-- define the source coordinates -->
    <!-- define the time source frequency -->
    <!-- define the receiver coordinates -->
    <AcousticSEM
      name="acousticSolver"
      cflFactor="0.8"
      discretization="FE1"
      targetRegions="{Region,Region1}"
      sourceCoordinates="{{1000.1,1000.1,30.1}}"
      timeSourceFrequency="10.0"
      receiverCoordinates="{{550.1,1000.1,30.1}}"
      outputSeismoTrace="0"
      dtSeismoTrace="0.001" />  

  </Solvers>

  <!-- hexahedral mesh generated with vtk from regular IJK grid -->
  <Mesh>
    <InternalMesh
      name="mesh"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 2000 }"
      yCoords="{ 0, 2000 }"
      zCoords="{ 0, 500,2000 }"
      nx="{ 100 }"
      ny="{ 100 }"
      nz="{ 100,300}"
      cellBlockNames="{ cb,cb1 }"/>
  </Mesh>

  <!-- tag the free surface boundary using box -->
  <!--Geometry>
    <Box
      name="zpos"
      xMin="{ -0.01, -0.01, -0.01}"
      xMax="{ 2000.01, 2000.01, 1.01 }"/>
  </Geometry-->

  <!-- list of events-->
  <Events maxTime="0.3">
    <!-- trigger the application of the solver -->
    <!-- control the timestepping here with forceDt -->
    <!-- (there are other ways to control the time step size) -->
    <PeriodicEvent
      name="solverApplications"
      forceDt="0.001"
      targetExactStartStop="0"
      targetExactTimestep="0"
      target="/Solvers/acousticSolver"/>

  </Events>

  <!-- numerical methods for discretization-->
  <NumericalMethods>
    <FiniteElements>
      <FiniteElementSpace
        name="FE1"
        order="1"/>
    </FiniteElements>
  </NumericalMethods>

  <!-- Region do we need it?-->
  <ElementRegions>
    <CellElementRegion
      name="Region"
      cellBlocks="{ cb }"
      materialList="{ nullModel }"/>
    <CellElementRegion
      name="Region1"
      cellBlocks="{ cb1 }"
      materialList="{ nullModel }"/>
  </ElementRegions>

  <Constitutive>
    <NullModel
      name="nullModel"/>
  </Constitutive>

  <!-- here use FieldSpecification to define: -->
  <FieldSpecifications>
    <!-- 1) The initial pressure field -->
    <FieldSpecification
      name="initialPressure_n"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="pressure_n"
      scale="0.0"/>
    <FieldSpecification
      name="initialPressure_nm1"
      initialCondition="1"
      setNames="{ all }"
      objectPath="nodeManager"
      fieldName="pressure_nm1"
      scale="0.0"/>
    <!-- 2) The free surface condition the domain -->
    <!--FieldSpecification
      name="zposFreeSurface"
      objectPath="faceManager"
      fieldName="FreeSurface"
      scale="0.0"
      setNames="{zpos}"/-->
   <!-- 3) The velocity in the domain -->
   <FieldSpecification
      name="cellVelocity"
      initialCondition="1"
      objectPath="ElementRegions/Region/cb"
      fieldName="mediumVelocity"
      scale="1500"
      setNames="{ all }"/>
   <FieldSpecification
      name="cellVelocity1"
      initialCondition="1"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="mediumVelocity"
      scale="1500"
      setNames="{ all }"/>
  </FieldSpecifications>
    <!-- collect the pressure values at the nodes -->

  <Tasks>
    <PackCollection
      name="partialGradientCollection"
      objectPath="ElementRegions/Region/cb"
      fieldName="partialGradient"/>

    <PackCollection
      name="partialGradientCollection1"
      objectPath="ElementRegions/Region1/cb1"
      fieldName="partialGradient"/>
  </Tasks>

  <Outputs>
    <TimeHistory
        name="partialGradientOutput"
        sources="{/Tasks/partialGradientCollection}"
        filename="partialGradient" />

    <TimeHistory
        name="partialGradientOutput1"
        sources="{/Tasks/partialGradientCollection1}"
        filename="partialGradient" />
  </Outputs>

</Problem>

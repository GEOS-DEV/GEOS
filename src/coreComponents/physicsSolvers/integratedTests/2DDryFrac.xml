<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">

  
  <Solvers
    gravityVector="0.0, 0.0, -9.81">

    <SolidMechanicsLagrangianSSLE name="lagSolve" 
                                  timeIntegrationOption="QuasiStatic"
                                  verboseLevel="0"
                                  discretization="FE1"
                                  targetRegions="Region2"
                                  solidMaterialName="granite"
                                  >
      <SystemSolverParameters krylovTol="1.0e-10"
                              newtonTol="1.0e-3"
                              maxIterNewton="8"
                              verbosityFlag="0"/>
     </SolidMechanicsLagrangianSSLE>
  
    <SurfaceGenerator name="SurfaceGen"
                      solidMaterialName="granite"
                      rockToughness="1e6"
                      displacementBasedSIF="0"
                      allowVacuumFrac="1"
                      verboseLevel="1"
                      targetRegions="Region2">
    </SurfaceGenerator>
  </Solvers>

  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="C3D8" 
                  xCoords="0, 40"
                  yCoords="-100, -4, 4, 100"
                  zCoords="0, 2"
                  nx="200"
                  ny="10, 40, 10"
                  nz="1"
                  cellBlockNames="cb1"/>
  </Mesh>

  <Geometry>
    <Box name="fracPlane" xMin="-0.9, -0.1, -0.1" xMax="10.1, 0.1, 2.1"/>
    <Box name="core" xMin="-0.1, -0.1, -0.1" xMax="40.1, 0.1, 2.1"/>
  </Geometry>


  <Events maxTime="10.0">
    <PeriodicEvent name="outputs"
                   timeFrequency="0.5"
                   targetExactTimestep="0"
                   target="/Outputs/siloOutput" />

    <PeriodicEvent name="solverApplications"
                   forceDt="0.5"
                   target="/Solvers/lagSolve" />
  
    <PeriodicEvent name="outputs"
                   timeFrequency="0.5"
                   targetExactTimestep="0"
                   target="/Outputs/siloOutput" />
    
    <PeriodicEvent name="restarts"
                   timeFrequency="0.5"
                   targetExactTimestep="0"
                   target="/Outputs/sidreRestart"/>
  </Events>


  <NumericalMethods>

    <BasisFunctions> 
        <LagrangeBasis3 name="linearBasis"  degree = "1"  />
    </BasisFunctions>
    
    <QuadratureRules>
        <GaussQuadrature3 name="gaussian"   degree="2"  />    
    </QuadratureRules>
    
    <FiniteElements>
        <FiniteElementSpace name="FE1" basis="linearBasis" quadrature="gaussian" />
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <ElementRegion name="Region2" cellBlocks="cb1" materialList="granite" />
  </ElementRegions>

  <Constitutive>
      <LinearElasticIsotropic name="granite"
                              defaultDensity="2700"
                              defaultBulkModulus="2.0e10"
                              defaultShearModulus="1.2e10"

/>
  </Constitutive>



  <FieldSpecifications>
    <FieldSpecification name="frac"
               initialCondition="1"
               setNames="fracPlane"
               objectPath="faceManager"
               fieldName="ruptureState"
               scale="1"/>

    <FieldSpecification name="separableFace"
               initialCondition="1"
               setNames="core"
               objectPath="faceManager"
               fieldName="isFaceSeparable"
               scale="1"/>
  
    <FieldSpecification name="x" 
               component="0" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.0" 
               setNames="xneg xpos"/>

    <FieldSpecification name="z" 
               component="2" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.0" 
               setNames="zneg zpos"/>

    <!--FieldSpecification name="bot1" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="-0.1" 
               setNames="yneg_lowerhalf"/>

    <FieldSpecification name="top1" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.1" 
               setNames="ypos_lowerhalf"/>

    <FieldSpecification name="bot2" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.0" 
               setNames="yneg_upperhalf"/>

    <FieldSpecification name="top2" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.0" 
               setNames="ypos_upperhalf"/-->

    <FieldSpecification name="yposConstraint" 
               component="1" 
               objectPath="faceManager"
               fieldName="Traction" 
               scale="1e6" 
               setNames="ypos"/>
               
    <FieldSpecification name="ynegconstraint" 
               objectPath="nodeManager" 
               fieldName="TotalDisplacement" 
               component="1" 
               scale="0.0" 
               setNames="yneg"/>
                              
    <!--FieldSpecification name="bot" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="-0.1" 
               setNames="yneg"/>
               
    <FieldSpecification name="top" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.1" 
               setNames="ypos"/-->
               
  </FieldSpecifications>


  <Functions>
    <TableFunction name="timeFunction"
                   inputVarNames="time"
                   coordinates= "0.0 1.0 1.0e9"
                   values     = "0.0 1.0 1.0" />
    
  </Functions>

  <!-- <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition> -->

 
  <Outputs>
    <Silo name="siloOutput" plotLevel="5" parallelThreads="1" plotFileRoot="simple2D"/>
    <Restart name="sidreRestart"/>
  </Outputs>



  <!-- <Fracture failCriterion="1" failGap="0.0004" fractureFlag="100" preFractureSetName="perf" rockToughness="1e6" separableSet="all"/> -->

</Problem>

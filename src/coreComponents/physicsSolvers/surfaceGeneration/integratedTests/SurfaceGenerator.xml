<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">

  
  <Solvers
    gravityVector="0.0, 0.0, -9.81">

    <SolidMechanicsLagrangianSSLE name="lagSolve" 
                                  timeIntegrationOption="QuasiStatic"
                                  verboseLevel="0"
                                  discretization="FE1"
                                  targetRegions="{Region2}"
                                  solidMaterialName="granite"
                                  >
      <SystemSolverParameters krylovTol="1.0e-10"
                              newtonTol="1.0e-3"
                              maxIterNewton="8"
                              verbosityFlag="0"/>
     </SolidMechanicsLagrangianSSLE>
  
    <SurfaceGenerator name="SurfaceGen"
                      verboseLevel="0"
                      fractureRegion="Fracture"
                      targetRegions="{Region2}"
                      solidMaterialName="granite"
                      rockToughness="1e6"
                      >
    </SurfaceGenerator>
  </Solvers>

  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="{C3D8}" 
                  xCoords="{-1, 1}"
                  yCoords="{-1, 1}"
                  zCoords="{-1, 1}"
                  nx="{6}"
                  ny="{6}"
                  nz="{6}"
                  cellBlockNames="{cb1}"/>
  </Mesh>

  <Geometry>
    <Box name="fracPlaneX" xMin="-0.1, -1e3, -1e3" xMax="0.1, 1e3, 1e3"/>
    <Box name="fracPlaneY" xMin="-1e3, -0.1, -1e3" xMax="1e3, 0.1, 1e3"/>
    <Box name="fracPlaneZ" xMin="-1e3, -1e3, -0.1" xMax="1e3, 1e3, 0.1"/>
  </Geometry>


  <Events maxTime="1.0">
    <SoloEvent 
      name="initialPlot"
      target="/Outputs/siloOutput"
      />

    <SoloEvent 
      name="preFracture"
      target="/Solvers/SurfaceGen"
      />
  
    <SoloEvent 
      name="preFracturePlot"
      target="/Outputs/siloOutput"
      />

    <PeriodicEvent name="solverApplications"
                   forceDt="0.5"
                   target="/Solvers/lagSolve" />
  
    <PeriodicEvent name="outputs"
                   timeFrequency="0.5"
                   targetExactTimestep="0"
                   target="/Outputs/siloOutput" />
    
    <PeriodicEvent name="restarts"
                   timeFrequency="0.5"
                   targetExactTimestep="0"
                   target="/Outputs/sidreRestart"/>
  </Events>


  <NumericalMethods>

    <BasisFunctions> 
        <LagrangeBasis3 name="linearBasis"  degree = "1"  />
    </BasisFunctions>
    
    <QuadratureRules>
        <GaussQuadrature3 name="gaussian"   degree="2"  />    
    </QuadratureRules>
    
    <FiniteElements>
        <FiniteElementSpace name="FE1" parentSpace="C3D8" basis="linearBasis" quadrature="gaussian" />
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <CellElementRegion name="Region2" cellBlocks="{cb1}" materialList="{granite}" />
    <FaceElementRegion name="Fracture" materialList="{granite}"/>
  </ElementRegions>

  <Constitutive>
      <LinearElasticIsotropic name="granite"
                              defaultDensity="2700"
                              defaultBulkModulus="5.5556e9"
                              defaultShearModulus="4.16667e9"/>
  </Constitutive>



  <FieldSpecifications>
    <FieldSpecification name="frac"
               initialCondition="1"
               setNames="{fracPlaneX, fracPlaneY, fracPlaneZ}"
               objectPath="faceManager"
               fieldName="ruptureState"
               scale="1"/>
  
  
    <FieldSpecification name="xneg" 
               component="0" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="-0.1" 
               setNames="{xneg}"/>

    <FieldSpecification name="xpos" 
               component="0" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.1" 
               setNames="{xpos}"/>

    <FieldSpecification name="zneg" 
               component="2" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="-0.1" 
               setNames="{zneg}"/>

    <FieldSpecification name="zpos" 
               component="2" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.1" 
               setNames="{zpos}"/>
                              
    <FieldSpecification name="bot" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="-0.1" 
               setNames="{yneg}"/>
               
    <FieldSpecification name="top" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               scale="0.1" 
               setNames="{ypos}"/>
               
  </FieldSpecifications>


  <Functions>
    <TableFunction name="timeFunction"
                   inputVarNames="{time}"
                   coordinates= "{0.0, 1.0, 1.0e9}"
                   values     = "{0.0, 1.0, 1.0}" />
    
  </Functions>

  <!-- <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition> -->

 
  <Outputs>
    <Silo name="siloOutput" plotLevel="5" parallelThreads="1" plotFileRoot="plot"/>
    <Restart name="sidreRestart"/>
  </Outputs>



  <!-- <Fracture failCriterion="1" failGap="0.0004" fractureFlag="100" preFractureSetName="perf" rockToughness="1e6" separableSet="all"/> -->

</Problem>

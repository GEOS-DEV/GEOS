<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">

  
  <Solvers
    gravityVector="0.0,0.0,-9.81">

    <SolidMechanics_LagrangianFEM name="lagSolve" 
                                  timeIntegrationOption="QuasiStatic"
                                  verboseLevel="0"
                                  >
      <SystemSolverParameters name="SystemSolverParameters"
                              krylovTol="1.0e-10"
                              newtonTol="1.0e-3"
                              maxIterNewton="8"
                              verbosityFlag="0"/>
     </SolidMechanics_LagrangianFEM>
  
    <SurfaceGenerator name="SurfaceGen"
                      failCriterion="1"
                      verboseLevel="3">
    </SurfaceGenerator>
  </Solvers>

  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="C3D8" 
                  xCoords="0, 2"
                  yCoords="-1, 1"
                  zCoords="0, 1"
                  nx="2"
                  ny="2"
                  nz="1"
                  cellBlockNames="cb1"/>
  </Mesh>

  <Geometry>
    <Box name="fracPlane" type="0" xMin="-1.00, -0.1, -1.00" xMax="2.01, 0.01, 1.01"/>
  </Geometry>


  <Events maxTime="3.0e-5">
    <PeriodicEvent name="solverApplications"
                   forceDt="1.0e-5"
                   target="/Solvers/lagSolve" />
  
    <!-- PeriodicEvent name="solverApplications"
                   forceDt="1.0e-5"
                   target="/Solvers/SurfaceGen" /-->
  
    <PeriodicEvent name="outputs"
                   timeFrequency="1e-6"
                   targetExactTimestep="0"
                   target="/Outputs/siloOutput" />

  </Events>


  <NumericalMethods>

    <BasisFunctions> 
        <LagrangeBasis3 name="linearBasis"  degree = "1"  />
    </BasisFunctions>
    
    <QuadratureRules>
        <GaussQuadrature3 name="gaussian"   degree="2"  />    
    </QuadratureRules>
    
    <FiniteElements>
        <finiteElementSpace name="FE1" basis="linearBasis" quadrature="gaussian" />
    </FiniteElements>
  </NumericalMethods>

  <ElementRegions>
    <ElementRegion name="Region2" cellBlocks="cb1" numericalMethod="FE1" material="granite" materialList="granite" />
  </ElementRegions>

  <Constitutive>
      <LinearElasticIsotropic name="granite"
                              Density0="2700"
                              BulkModulus0="5.5556e9"
                              ShearModulus0="4.16667e9"/>
  </Constitutive>


  <InitialConditions>
    
  </InitialConditions>

  <BoundaryConditions>
    <Dirichlet name="frac"
               initialCondition="1"
               setNames="fracPlane"
               objectPath="faceManager"
               fieldName="ruptureState"
               dataType="integer" 
               scale="1"/>
  
  
    <Dirichlet name="x" 
               component="0" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               dataType="Vector"  
               scale="0.0" 
               setNames="yneg ypos"/>

    <Dirichlet name="z" 
               component="2" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               dataType="Vector"  
               scale="0.0" 
               setNames="yneg ypos"/>
                              
    <Dirichlet name="bot" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               dataType="Vector"  
               scale="-0.1" 
               setNames="yneg"/>
               
    <Dirichlet name="top" 
               component="1" 
               objectPath="nodeManager"
               fieldName="TotalDisplacement" 
               dataType="Vector"  
               scale="0.1" 
               setNames="ypos"/>
               
  </BoundaryConditions>


  <Functions>
  </Functions>

  <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition>

 
  <Outputs>
    <Silo name="siloOutput" plotLevel="5" parallelThreads="1" plotFileRoot="plot" restartInterval="1e6"/>
  </Outputs>



  <Fracture failCriterion="1" failGap="0.0004" fractureFlag="100" preFractureSetName="perf" rockToughness="1e6" separableSet="all"/>

</Problem>

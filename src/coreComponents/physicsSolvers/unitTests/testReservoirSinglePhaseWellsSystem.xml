<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">

  <Solvers
    gravityVector="0.0, 0.0, -9.81">

    <ReservoirWellsSystem name="reservoirWellsSystem"
		   flowSolverName="singlePhaseFlow"
                   wellSolverName="singlePhaseWell"
                   verboseLevel="1"
                   targetRegions="Region2">
      <SystemSolverParameters maxIterNewton="40"
                              verbosityFlag="2"/>
    </ReservoirWellsSystem>
  
    <SinglePhaseFlow name="singlePhaseFlow"
                     verboseLevel="1"
                     gravityFlag="1"
                     discretization="singlePhaseTPFA"
                     fluidName="water"
                     solidName="rock"
                     targetRegions="Region2">
      <SystemSolverParameters krylovTol="1.0e-10"
                              newtonTol="1.0e-6"
                              maxIterNewton="8"/>
    </SinglePhaseFlow>

    <SinglePhaseWell name="singlePhaseWell"
                     verboseLevel="1"
                     gravityFlag="1"
                     fluidName="water"
                     targetRegions="Region2">
      <SystemSolverParameters krylovTol="1.0e-10"
                              newtonTol="1.0e-6"
                              maxIterNewton="8"/>
    </SinglePhaseWell>
  </Solvers>
  
  <Mesh>
    <InternalMesh name="mesh1"
                  elementTypes="C3D8" 
                  xCoords="0, 10"
                  yCoords="0, 1"
                  zCoords="0, 1"
                  nx="10"
                  ny="1"
                  nz="1"
                  cellBlockNames="cb1"/>
  </Mesh>


  <Events maxTime="20">
    <PeriodicEvent name="solverApplications"
                   forceDt="20"
                   target="/Solvers/reservoirWellsSystem" />

    <PeriodicEvent name="outputs"
                   timeFrequency="100.0"
                   targetExactTimestep="1"
                   target="/Outputs/siloOutput" />
  </Events>

  <NumericalMethods>
    <FiniteVolume>
      <TwoPointFluxApproximation name="singlePhaseTPFA"
                                 fieldName="pressure"
                                 coefficientName="permeability"/>
    </FiniteVolume>
  </NumericalMethods>

  <ElementRegions>
    <ElementRegion name="Region2"
                   cellBlocks="cb1"
                   materialList="water rock"/>
  </ElementRegions>

  <Constitutive>
    <CompressibleSinglePhaseFluid name="water"
                                  referencePressure="0.0"
                                  referenceDensity="1000"
                                  compressibility="5e-10"
                                  referenceViscosity="0.001"
                                  viscosibility="0.0"/>

    <PoreVolumeCompressibleSolid name="rock"
                                 referencePressure="0.0"
                                 compressibility="1e-9"/>
  </Constitutive>

  <Wells name="wellGroup"
	 materialList="water">
    <Well name="prod0"
          type="producer"
	  control="BHP"
	  targetBHP="4e6"
	  targetRate="0"
          referenceDepth="0.5">
      <Segments>
	<Segment name="prod0_unique_seg"
		 location="9 0.5 0.5"/>
      </Segments> 
      <Connections>
	<Connection name="prod0_first_conn"
		    prevSegmentName=""
		    nextSegmentName="prod0_unique_seg" />
      </Connections> 
      <Perforations>
        <Perforation name="prod0_p0"
		     location="9.5 0.5 0.5"
		     transmissibility="1e-12"
		     segmentName="prod0_unique_seg" />
        <Perforation name="prod0_p1"
		     location="8.5 0.5 0.5"
		     transmissibility="1e-12"
		     segmentName="prod0_unique_seg" /> 
      </Perforations> 
    </Well>

    <Well name="inj1"
          type="injector"
  	  control="oilRate" 
	  targetBHP="1e8"
	  targetRate="1e-6"
          referenceDepth="0.5">
      <Segments>
	<Segment name="inj1_unique_seg"
		 location="1.5 0.5 0.5"/>
      </Segments> 
      <Connections>
	<Connection name="inj1_first_conn"
		    prevSegmentName=""
		    nextSegmentName="inj1_unique_seg" />
      </Connections> 
      <Perforations>
        <Perforation name="inj1_p0"
		     location="0.5 0.5 0.5"
		     transmissibility="1e-12"
		     segmentName="inj1_unique_seg" />
	<Perforation name="inj1_p1"
		     location="1.5 0.5 0.5"
		     transmissibility="1e-12"
		     segmentName="inj1_unique_seg" />
	<Perforation name="inj1_p2"
		     location="2.5 0.5 0.5"
		     transmissibility="1e-12"
		     segmentName="inj1_unique_seg" />
      </Perforations> 
    </Well>
    
  </Wells>
  
  <FieldSpecifications>
    <FieldSpecification name="permx"
               component="0"
               initialCondition="1"  
               setNames="all"
               objectPath="ElementRegions/elementRegions/Region2/elementSubRegions/cb1"
               fieldName="permeability"
               scale="2.0e-16"/>

    <FieldSpecification name="permy"
               component="1"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Region2/elementSubRegions/cb1"
               fieldName="permeability"
               scale="2.0e-16"/>

    <FieldSpecification name="permz"
               component="2"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Region2/elementSubRegions/cb1"
               fieldName="permeability"
               scale="2.0e-16"/>

    <FieldSpecification name="referencePorosity"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Region2/elementSubRegions/cb1"
               fieldName="referencePorosity"
               scale="0.05"/>

    <FieldSpecification name="initialPressure"
               initialCondition="1"
               setNames="all"
               objectPath="ElementRegions/elementRegions/Region2/elementSubRegions/cb1"
               fieldName="pressure"
               scale="5e6"/>
  </FieldSpecifications>
    
  <Functions>
    <TableFunction     name="timeFunction"         inputVarNames="time" coordinates="1.0, 2.0, 6e4" values="1.0, 2.0, 2.0" />
  </Functions>

  <Partition>
    <SpatialPartition xPar="1" yPar="1" zPar="1"/>
  </Partition> 

  <Outputs>
      <Silo name="siloOutput"/>
  </Outputs>

</Problem>

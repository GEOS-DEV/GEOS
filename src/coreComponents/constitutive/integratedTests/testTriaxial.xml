<?xml version="1.0" ?>

<Problem>
  <Tasks>
    <TriaxialDriver
      name="triaxialDriver"
      material="camclay"
      mode="triaxial" 
      strainFunction="strainFunction"
      stressFunction="stressFunction"
      steps="50" 
      output="output.txt" />
  </Tasks>

  <Events
    maxTime="1">
    <SoloEvent
      name="triaxialDriver"
      target="/Tasks/triaxialDriver"/>
  </Events>

  <Constitutive>

    <ElasticIsotropic
      name="elastic"
      defaultDensity="2700"
      defaultBulkModulus="1000"
      defaultShearModulus="1000"/>

    <ExtendedDruckerPrager 
      name="drucker"
      defaultDensity="2700"
      defaultBulkModulus="500"
      defaultShearModulus="300"
      defaultCohesion="0.0"
      defaultInitialFrictionAngle="15.27"
      defaultResidualFrictionAngle="23.05"
      defaultDilationRatio="1.0"
      defaultHardening="0.001"
    />

    <!--Note: defaultBulkModulus parameter is not used and will be removed-->
    <CamClay
      name="camclay"
      defaultDensity="2700"
      defaultRefPressure="-1.0"
      defaultRefStrainVol="0"
      defaultShearModulus="200.0"
      defaultBulkModulus="0"  
      defaultPreConsolidationPressure="-1.5"
      defaultShapeParameter="1.0"
      defaultCslSlope="1.05"
      defaultVirginCompressionIndex="0.02"
      defaultRecompressionIndex="0.002"/>

  </Constitutive>

  <Functions>
    <TableFunction
      name="strainFunction"
      inputVarNames="{ time }"
      coordinates="{ 0.0, 3.0, 4.0 }"
      values="{ 0, -0.003, -0.002 }"/>
    <TableFunction
      name="stressFunction"
      inputVarNames="{ time }"
      coordinates="{ 0.0, 3.0, 4.0 }"
      values="{ -1.0, -1.0, -1.0 }"/>
  </Functions>

  <!-- Mesh is not used, but GEOSX throws an error without one.  Will resolve soon-->
  <Mesh>
    <InternalMesh
      name="mesh1"
      elementTypes="{ C3D8 }"
      xCoords="{ 0, 1 }"
      yCoords="{ 0, 1 }"
      zCoords="{ 0, 1 }"
      nx="{ 1 }"
      ny="{ 1 }"
      nz="{ 1 }"
      cellBlockNames="{ cellBlock01 }"/>
  </Mesh>

</Problem>

<?xml version="1.0" ?>
<!--# # -->

<Problem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="geos_v0.0.xsd">
  
  <Mesh>
    <InternalMesh name="mesh"
                  elementTypes="C3D8" 
                  xCoords="0, 1"
                  yCoords="0, 1"
                  zCoords="0, 1"
                  nx="8"
                  ny="8"
                  nz="8"
                  cellBlockNames="block"/>
  </Mesh>

  <ElementRegions>
    <ElementRegion name="region" cellBlocks="block" numericalMethod="FE1" material="shale" materialList="shale" />
  </ElementRegions>

  <!-- TODO: revisit input requirements -->

  <NumericalMethods>
    <BasisFunctions> 
        <LagrangeBasis3 name="linearBasis" degree = "1"  />
    </BasisFunctions>
    <QuadratureRules>
        <GaussQuadrature3 name="gaussian"  degree="2"  />    
    </QuadratureRules>
    <FiniteElements>
        <finiteElementSpace name="FE1" basis="linearBasis" quadrature="gaussian" />
    </FiniteElements>
  </NumericalMethods>

  <Constitutive>
      <LinearElasticIsotropic name="shale"
                              density0="2700"
                              BulkModulus0="5.5556e9"
                              ShearModulus0="4.16667e9"/>
  </Constitutive>

</Problem>

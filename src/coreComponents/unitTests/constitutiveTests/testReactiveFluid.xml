  <Events
    maxTime="1">
    <SoloEvent
      name="eventA"
      target="/Tasks/testDistilledWaterCO2"/>
  </Events>

  <Constitutive>
    <ReactiveMultiFluid
      name="reactiveFluid"
      phaseNames="{ water }"
      componentNames="{ water }"
      componentMolarWeight="{ 18e-3 }"/>
  </Constitutive>

  <Functions>
    <TableFunction
      name="pressureFunction"
      inputVarNames="{ time }"
      coordinates="{ 0.0, 1.0 }"
      values="{ 1e6, 1e6 }"/>

    <TableFunction
      name="temperatureFunction"
      inputVarNames="{ time }"
      coordinates="{ 0.0, 1.0 }"
      values="{ 350, 350 }"/>
  </Functions>

